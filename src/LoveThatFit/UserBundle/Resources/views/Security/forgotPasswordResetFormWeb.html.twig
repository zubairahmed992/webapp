<script type="text/javascript">
  $(document).ready(function() {
    $('#password').keyup(function() {
      passwordValidate();
    });
    $('#confirm_password').keyup(function() {
      confirmCheck();
    });
  });

  $( ".btn-primary" ).click(function() {
    if(passwordValidate() && confirmCheck()) {
      var value_ar = {
          user_id: {{user.id}},
          password: $("#password").val()
      };
      $.ajax({
          type: "POST",
          url: "{{ path('forgot_password_update_web') }}",
          data: value_ar,
          success: function (data) {
            window.location.href = "/forgot_password_thanks_web";
          },
          failure: function (errMsg) {
          }
      });
    }
  });

  function confirmCheck()
  {
    var pswd = $("#password").val();
    var c_pswd = $("#confirm_password").val(); 
    if (pswd != c_pswd) {
      $(".c_pass").show();
      return false;
    } else {
      $(".c_pass").hide();
      return true;
    }
  }

  function passwordValidate()
  {
    var pswd = $("#password").val();
    var error = 0;
    //validate the length
    var htmltag = 'Required:';
    if ( pswd.length < 8 ) {
      error = 1;
      htmltag += '</br>8 Characters';
    }

    //validate capital letter
    if ( !pswd.match(/[A-Z]/) ) {
     error = 1;
       htmltag += '</br>1 Capital Letter';
    }
    //validate number
    if ( !pswd.match(/\d/) ) {
      error = 1;
       htmltag += '</br>1 Number';
    }
    if (error == 1) {
      jQuery("#pwd_hint").html(htmltag);
      return false;
    } else {
      jQuery("#pwd_hint").html('');
      return true;
    }

  }



