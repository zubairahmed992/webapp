{% extends 'LoveThatFitUserBundle::base_reg.html.twig' %}
{% block action_block_content %}
<section class="reg_blk">
    <div class="action_cnt step_1">
        <h2>Log In</h2>
        <form action="{{ path('forgot_password_form') }}" method="post">
            {{ form_errors(form) }}
            <div class="frm_ele">            
                     {{ form_errors(form.email) }}
                
                {{ form_widget(form.email) }}
            </div>
                {{form_rest(form)}}
            <div class="frm_ele">
                <input id="sbmt_bnt" type="submit" value="Submit" />
            </div>
                
        </form>
         {% if  defaultData is defined %}
        <div class="login_error" >
        <div id="triangle-left"></div>
        <div id="error_content">{{ defaultData }}</div>
        
        </div>
{% endif %}
        <ul class="row with_sep">
            <li><a href="{{path('login')}}">login</a></li>
            <li><a href="{{path('registration_step_one')}}">create</a></li>
        </ul>
        <!--/.action_cnt--></div>
    <!--/.action_blk--></section>
{% endblock %}

