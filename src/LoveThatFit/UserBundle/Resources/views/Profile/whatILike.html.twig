{% extends 'LoveThatFitUserBundle:Profile:baseProfile.html.twig' %}
{% block profile_heading %}
<h1>What I Like</h1>
{% endblock %}

{% block profile_section %}

        {% for item in data %}  
          <div class="pf_box"> 
            <div class="pf_question">{{item.question}}</div>
                {% for a in item.answers %}
            <form action="" method="post" {{ form_enctype(addNewForm) }}>
      {{ form_widget(addNewForm) }} 
                <input type="submit" value="Add Question" />
            </form>       
            
            
            <input type="radio" name="answer" value="{{a.id}}" ><span class="pf_answer">{{a.answer}}</span><br>
                {%endfor%}
            </div>
        {%endfor%}
            <div class="clr_bth"></div> 
        <input type="submit" value="Submit">

{% endblock %}
