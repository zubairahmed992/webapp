                </form>  
      
          <script>
            function ProductSizeMeasuremtAdd()
            {
                var numeric = /^[0-9]+$/;
                var garmentmeasurementflat=document.getElementById('product_size_measurement_garment_measurement_flat').value;
                var maxbodymeasurement=document.getElementById('product_size_measurement_max_body_measurement').value;
                var stretch_type_percentage=document.getElementById('product_size_measurement_stretch_type_percentage').value;
                var ideal_body_size_low=document.getElementById('product_size_measurement_ideal_body_size_low').value;
                var ideal_body_size_high=document.getElementById('product_size_measurement_ideal_body_size_high').value;
                var garment_measurement_stretch_fit=document.getElementById('product_size_measurement_garment_measurement_stretch_fit').value;
               var  vertical_stretch =document.getElementById('product_size_measurement_vertical_stretch').value;
               var  horizontal_stretch =document.getElementById('product_size_measurement_horizontal_stretch').value;
        if(ideal_body_size_high==0  && ideal_body_size_low==0)
              {                
                document.getElementById('error_ideal_body_size_high_zero').style.display="block";    
                document.getElementById('error_ideal_body_size_high').style.display="none";    
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                ideal_body_size_high.focus;
                return false;
               } 
        if(ideal_body_size_high=='' && ideal_body_size_low=='')
              {
                document.getElementById('error_ideal_body_size_high').style.display="block";  
                document.getElementById('error_ideal_body_size_high_zero').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                ideal_body_size_high.focus;
                return false;
               }
        if(!garmentmeasurementflat.match(numeric)){
		document.getElementById('error_valid_garment_measurement_flat').style.display="block";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                garmentmeasurementflat.focus;
                return false;
                }
               if(!maxbodymeasurement.match(numeric)){
                document.getElementById('error_validmaxbodymeasurement').style.display="block";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                maxbodymeasurement.focus;
                return false;
                }
               if(!stretch_type_percentage.match(numeric)){
                document.getElementById('error_valid_stretch_type_percentage').style.display="block";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                stretch_type_percentage.focus;
                return false;
                }              
               if(!ideal_body_size_high.match(numeric)){                
                document.getElementById('error_valid_ideal_body_size_high').style.display="block";
                document.getElementById('error_valid_ideal_body_size_low').style.display="block";    
                document.getElementById('error_valid_stretch_type_percentage').style.display="none";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                ideal_body_size_high.focus;
                return false;
                }
               
               if(!ideal_body_size_low.match(numeric)){
                document.getElementById('error_valid_ideal_body_size_low').style.display="block";    
                document.getElementById('error_valid_stretch_type_percentage').style.display="none";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                ideal_body_size_low.focus;
                return false;
                }                
                if(!vertical_stretch.match(numeric)){        
                document.getElementById('error_valid_vertical_stretch').style.display="block";    
                document.getElementById('error_valid_ideal_body_size_high').style.display="none";
                document.getElementById('error_valid_ideal_body_size_low').style.display="block";    
                document.getElementById('error_valid_stretch_type_percentage').style.display="none";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                vertical_stretch.focus;
                return false;
                }
                if(!horizontal_stretch.match(numeric)){        
                document.getElementById('error_valid_horizontal_stretch').style.display="block"; 
                document.getElementById('error_valid_vertical_stretch').style.display="none";
                document.getElementById('error_valid_ideal_body_size_high').style.display="none";
                document.getElementById('error_valid_ideal_body_size_low').style.display="block";    
                document.getElementById('error_valid_stretch_type_percentage').style.display="none";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                horizontal_stretch.focus;
                return false;
                }
                if(!garment_measurement_stretch_fit.match(numeric)){        
                document.getElementById('error_valid_garment_measurement_stretch_fit').style.display="block";
                document.getElementById('error_valid_horizontal_stretch').style.display="none"; 
                document.getElementById('error_valid_vertical_stretch').style.display="none";
                document.getElementById('error_valid_ideal_body_size_high').style.display="none";
                document.getElementById('error_valid_ideal_body_size_low').style.display="block";    
                document.getElementById('error_valid_stretch_type_percentage').style.display="none";
                document.getElementById('error_validmaxbodymeasurement').style.display="none";
		document.getElementById('error_valid_garment_measurement_flat').style.display="none";
                document.getElementById('error_garment_measurement_stretch_fit').style.display="none"; 
                document.getElementById('error_ideal_body_size_low').style.display="none"; 
                document.getElementById('error_ideal_body_size_high').style.display="none"; 
                document.getElementById('error_stretch_type_percentage').style.display="none";
                document.getElementById('error_maxbodymeasurement').style.display="none";
                document.getElementById('error_garment_measurement_flat').style.display="none";
                garment_measurement_stretch_fit.focus;
                return false;
                }
               
                else
                   {
                       return true;
                   }
            }   
            </script> 
            </div>     




{% endblock %}

