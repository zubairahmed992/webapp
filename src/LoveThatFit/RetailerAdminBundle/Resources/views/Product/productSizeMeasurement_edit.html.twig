{% extends 'LoveThatFitRetailerAdminBundle::base.html.twig' %}
{% block breadcrumb %}
 <li class="active">Retailer Dashboard </li>
{% endblock %}
{% block h1 %}Product{% endblock %}
{% block title %}Product{% endblock %}
{% block body %}
<div>         
    <h1 style="float:left;"> Product Detail </h1>    
      <div class="clearfix"></div>   
    <form action="{{ path('retailer_admin_product_size_measurement_editUpdate',{"measurement_id":productSizeMeasurement.id,"size_id":product_size.id,'title':title}) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}
            <div id="detail_wrapper">      
                <div id="p_hd">Product Detail</div>                
                    <div class="clearfix"></div>
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                    <div class="row-fluid show-grid">    
                                    <div class="span3">Title</div>
                                    <div class="span3">{{title}}</div>
                                </div>   
                                     <div class="row-fluid show-grid">
                                    <div class="span3">Garment Measurement Flat</div>
                                    <div class="span3">{{ form_widget(form.garment_measurement_flat) }}{{ form_errors(form.garment_measurement_flat) }}</div>
                                </div>
                                    <div class="row-fluid show-grid">
                                     <div class="span3">Max Body Measurement</div>
                                    <div class="span3">{{ form_widget(form.max_body_measurement) }}{{ form_errors(form.max_body_measurement) }}
                                    </div>
                                </div>                                
                                 <div id="optional_elements">
                                    
                                <div class="row-fluid show-grid" id="styling_type">
                                    <div class="span3">Vertical Stretch</div>
                                    <div class="span3">
                                        {{ form_widget(form.vertical_stretch) }}{{ form_errors(form.vertical_stretch) }}
                                    </div>
                                </div>
                                    
                                <div class="row-fluid show-grid" id="hem_length">
                                    <div class="span3">Horizontal Stretch</div>
                                    <div class="span3">
                                         {{ form_widget(form.horizontal_stretch) }}{{ form_errors(form.horizontal_stretch) }}
                                    </div>
                                </div>
                                
                                <div class="row-fluid show-grid" id="neckline">
                                    <div class="span3">Stretch Type Percentage</div>
                                    <div class="span3">
                                         {{ form_widget(form.stretch_type_percentage) }}{{ form_errors(form.stretch_type_percentage) }}
                                     
                                    </div>
                                </div>
                                
                                <div class="row-fluid show-grid" id="sleeve_styling">
                                    <div class="span3">Ideal Body Size High</div>
                                    <div class="span3">
                                    {{ form_widget(form.ideal_body_size_high) }}{{ form_errors(form.ideal_body_size_high) }}
                                           
                                    </div>
                                </div>
                                    
                                <div class="row-fluid show-grid" id="rise">
                                    <div class="span3">Ideal Body Size Low</div>
                                    <div class="span3">
                                     {{ form_widget(form.ideal_body_size_low) }}{{ form_errors(form.ideal_body_size_low) }}
                                    </div>
                                </div>    
                                
                                
                                
                                
                                    
                                    
                                    
                                 </div>    
                                    
                     
                                    
                                
                                    
                                    
                                    
                                    
                              
                                
                                
                                    
                                
                                
                               
                                
                                        
                                    
                               
                              
                                    
                                    
                              
                                    
                               
                                  
                                
                                    
                                    
                                <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">
				{{ form_rest(form) }}
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="ADD" class="btn btn-large btn-primary"/>                                     
                                    </div>                                    
                                    </div>
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End pro_detail -->      
                        </div><!-- End product_content --> 
    </div>               
    </div> <!-- End detail_wrapper -->
                </form> 
      
          
            </div>     




{% endblock %}

