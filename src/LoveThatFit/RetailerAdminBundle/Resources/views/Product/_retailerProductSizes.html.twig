<div id="pro_sizes_wrapper">  
    <h2> Product Sizes</h2>
{% if app.session.hasFlash('success') %}
    <div class="alert alert-success">   
    {{ app.session.flash('success') }}
        </div>
{% endif %}
    {% if app.session.hasFlash('warning') %}
        <div class="alert alert-error">   
    {{ app.session.flash('warning') }}
            </div>
{% endif %}
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="retailor_pro_size">
    {% for key, value in size_measurements %}                    
                {% if (value['exists'])%}                  
                <tr>
                    <td class="retailor_det_key">{{value['measurement']['title'] }}                        
                        <div class="retailer_edt"><a href="{{ path('retailer_admin_product_size_measurement_edit', {'measurement_id':value['measurement']['id'],'size_id':size_id,'title':key}) }}" class="btn"> Edit</a></div>
                    </td>
                </tr>
                <tr>
                    <td>                      
                        <table cellpadding="5" cellspacing="0" border="0" width="100%">
                            <tr>
                                <td width="20%">Garment Measurement Flat:</td>
                                <td>{{value['measurement']['garment_measurement_flat'] }}</td>
                                <td width="20%">&nbsp;</td>
                                <td width="20%">Max Body Measurement :</td>
                                <td>{{value['measurement']['max_body_measurement'] }}</td>
                            </tr>                           
                            <tr>
                                <td>Vertical Stretch :</td>
                                <td>{{value['measurement']['vertical_stretch'] }}</td>
                                <td>&nbsp;</td>
                                <td>Horizontal Stretch :</td>
                                <td>{{value['measurement']['horizontal_stretch'] }}</td>
                            </tr>                            
                             <tr>
                                <td>Stretch Type Percentage :</td>
                                <td>{{value['measurement']['stretch_type_percentage'] }}</td>
                                <td>&nbsp;</td>
                                <td>Ideal Body Size High :</td>
                                <td>{{value['measurement']['ideal_body_size_high'] }}</td>
                            </tr>                            
                            <tr>
                                <td>Ideal Body Size Low :</td>
                                <td>{{value['measurement']['ideal_body_size_low'] }}</td>
                                 <td>&nbsp;</td>
                                 <td>&nbsp;</td>
                                 <td>&nbsp;</td>                                
                            </tr>
                        </table>      
                    </td>
                </tr>                
                {% else %}
        <tr>
            <td class="retailor_det_key" >{{key}}                
                <div style="float:right;"><a href="{{ path('retailer_admin_product_detail_size_measurement_create', {'id':id,'size_id':size_id,'title':key}) }}" class="btn">Add</a>   <a href="{{ path('retailer_admin_product_size_measurement_create', {'id':id,'size_id':size_id}) }}" class="btn" data-toggle="modal">Add New</a></div>
            </td>           
        </tr>      
        
                {% endif %}
        
</div>  
    {% endfor %}


<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Product Measurement Size</h3>
  </div>
  <div class="modal-body">
      <span id="{{ path('retailer_admin_product_size_measurement_create', {'id':id,'size_id':size_id}) }}" style="display:none;">{{ path('retailer_admin_product_size_measurement_create', {'id':id,'size_id':size_id}) }}</span>
  </div>
  </div>

<script>
$('[data-toggle="modal"]').click(function(e) {
  e.preventDefault();
 var url= $('#retailer_admin_product_size_measurement_create').text();  
  $.get(url, function(data) {
      $(data).modal();
  });
});
    </script>
            </table>
        </div>