{% extends 'LoveThatFitSupportBundle::base.html.twig' %}
{% block breadcrumb %}
    <li class="active">User Saved Look</li>
{% endblock %}

{% block body %}
    <div>
        <h1 style="float:left;">Saved Look</h1>

        <div class="clearfix"></div>
        <div id="detail_wrapper" class="detail_wrap">
            <div id="p_hd">User Saved Looks</div>


            <div id="product_content">
                <div id="pro_detail">
                    <div class="edt_container">
                            <div class="row-fluid show-grid">
                                <div class="span2"><strong>User Email</strong></div>
                            </div>
                            <div class="row-fluid show-grid">
                                <div class="span4">
                                    <select id="sel_user">
                                        <option>select</option>
                                        {% for k,v in users %}
                                            <option value="{{ v.authToken }}">{{ v.email }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="span2" style="max-height: 100px !important;">
                                    <input type="button" value="Show" class="btn btn-small btn-primary" id="user_looks"/>
                                </div>
                            </div>

                            <div class="row-fluid show-grid" id="useralllooks">

                            </div>
                    </div>
                </div>
            </div><!-- End pro_detail -->
        </div><!-- End product_content -->
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#user_looks").on("click", function(){
                var show_url = "/support/show_user_looks";
                var authToken = $("#sel_user option:selected").val();

                $.ajax({
                    type: 'POST',
                    url: show_url,
                    data: {auth_token: authToken},
                    dataType: 'html',
                    success: function (response) {
                        $("#useralllooks").html( response );
                    }
                })
            });
        });
    </script>

{% endblock %}