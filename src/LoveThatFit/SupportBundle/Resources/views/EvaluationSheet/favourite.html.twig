<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
{% if products %}
    <h4 id="heading"></h4>
<table class="table table-condensed table-bordered  table-hover" >
    <tr class="evaluation_tr">
        <th>Style Number
