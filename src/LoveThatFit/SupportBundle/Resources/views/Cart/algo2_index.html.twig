        &nbsp;{{ form_widget(productForm.Product) }}{{ form_errors(productForm.Product) }}
            Or <input type="text" placeholder="Search Product" id="product_keyword"><input type="hidden" id="product_id">
        {{ form_rest(productForm) }}
        </form>      
    </div>

