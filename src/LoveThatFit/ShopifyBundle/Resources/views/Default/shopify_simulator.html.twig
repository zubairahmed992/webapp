
{% extends 'LoveThatFitShopifyBundle::shopify_base_reg.html.twig' %}

{% block reg_fitting_room %}
<div style="float: left">
    
{% for p in products %}
        {{p.id}}
        {%if p.displayProductColor %}      
                <a  onclick="show_fitting_room('{{p.id}}')"  href='#'><img src='{{asset(p.displayProductColor.WebPath)}}'></a> 
        {% endif %}
           <br>
           <div>
            {% for pc in p.ProductColors %}
                   <div style="float: left"> {{pc.title}}</div>
                <div  style="float: left; padding-left: 30px;">
                        {% for pi in p.ProductItems %}
                        <a href="#">{{pi.ProductSize.title}}</a> &nbsp;|&nbsp;
                        {% endfor %}
                </div>
                   <br>
           {% endfor %}
          
         </div>
           
{% endfor %}
           
           
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
function checkUser(){
    var user_id=$('#user_id').val();
    var sku=$('#sku').val();
    var url= $('#check_user_url').text()+'/'+user_id+'/'+sku;
     alert(url);
     $.ajax({
           type:'POST',
           url: url,
           data: {user_id: user_id,sku:sku},
           success: function(data) {
               console.log(data);
               window.frames['ext_fitting_room'].location=url;
               //var s = document.getElementById('ext_fitting_room');
               // s.contentDocument.write(data);

            }
     });
       
 }

</script>
<div id="user_sku" style="float: right;">
    
    <span id="check_user_url" style="display:none;">{{path('shopify_user_check')}}</span>
        User:<input type="text" name="user_id" id="user_id">
               <br>
               sku:<input type="text" name="sku" id="sku">
               <br>
               <input type="button" value="Submit" onclick="checkUser()">
   
</div>


