<div id="compare_list">
    <ul>
        {% for product in app.session.get('product_compare_list') %}
            {% if(product.id) is defined %}
            
            
            
           <div class="hover panel">
	<div class="front">
            
             <li style="float:left">
               
                <img src="{{asset(product.image) }}" title="{{product.product_name}}">
               
            
            </li>
	  
	</div>
	<div class="back">
            
            
            
             <li style="float:left">
                <a href="{{path('compare_product_remove', {'product_id': product.id})}}">
                <img src="{{asset(product.image) }}">
                </a>
            
            </li>
		
	</div>
</div> 
            
            
            
           
            
            
            
            
            {% endif %}
        {% endfor %}
    </ul>
     
        
</div>
<span id="patchh"></span>
<span id="ralling">
<img src="{{ asset('bundles/lovethatfit/site/images/compare_ralling.png') }}" />
</span>
<div id="compare_ico">

    
   
    
    
    
    
    <span id="compare_prod_no">
{{app.session.get('product_compare_list')|length}}
</span>
    
    <span style="position: absolute; top:60px; right:0px; font-size: 0.75em; text-align: center;">
       <a href="{{path('compare_product_index')}}">Compare<br>Now</a>
    </span>
    <img src="{{ asset('bundles/lovethatfit/site/images/compare_icon.png') }}" />

</div>
{# dump(app.session.get('product_compare_list')) #}


<script>
  
$(document).ready(function(){

$('#compare_list').hide();
$('#ralling').hide();
$('#go_link').hide();
}); 

$('#compare_ico').click(function(){
  
  
  $('#ralling').toggle('slide', {
            direction: 'right'
        }, 1000)        
        ;
               
        $('#compare_list').toggle('slide', {
            direction: 'right'
        }, 1000);        

});

    </script>
    
    

	

		

		

		

	
