{% block fitting_room %}

<script type="text/javascript" src="{{ asset('bundles/easy_slider/js/jquery.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/easy_slider/js/easySlider1.7.js')}}"></script>
<script type="text/javascript">
$(document).ready(function(){	
$("#slider1, #slider2,#slider3, #slider4").easySlider({
auto: true, 
continuous: true
});

});	
</script>
<link href="{{ asset('bundles/easy_slider/css/screen.css')}}" rel="stylesheet" type="text/css" media="screen" />


<div id="boxes_wrapper">
    <div class="home_box" id="comapre_1">
    <ul style="display: block;" id="fchld">
        
                 {% for p in product %}
                  <li>
                      <span class="arw">  <h1>Product:</h1>
                          {% if(p.image is defined )%}
                            <div><img src="{{ asset(p.image) }}" style="opacity:0.2;"/> </div>
                           {%endif%} 
                          <a href="#_">{{p.title}}</a></span>
                  </li>
                  <li>
                      <span class="arw"> Brand:</span>
                      <span class="arw">{{p.brand}}</span>
                      
                  </li>  
                  <li>
                      <span> Clothing Type:</span>
                      <span>{{p.clothingType}}</span>
                  </li>
                  <li>
                       <span class="arw"> Fitting Alert</span>
                      <span class="arw">{{ dump(p.fittingAlert.feedback) }}</span>
                  
                  </li>
                    {% endfor %}
                   
                    </ul>
    </div>
       
       
        
</div>









{% endblock %} 