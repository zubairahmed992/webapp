{% extends 'LoveThatFitUserBundle:Profile:baseProfile.html.twig' %}
{% block profile_heading %}
<h1>Favorites</h1>
        {% endblock %}
{% block profile_section %}
{% if app.session.hasFlash('warning') %}
       <div class="alert alert-error">        
        {{ app.session.flash('warning') }}
        </div>   
{% endif %}      
{% if app.session.hasFlash('success') %}
  <div class="success_alert">   
    {{ app.session.flash('success') }}
   </div>   
{% endif %}
{%for p in product%}
{%for pi in p.productItems%}
<div>{{p.name}}</div>
<div>{{p.brand.name}}</div>
<img width="63" height="108" src="{{asset(pi.WebPath)}}" class="prod_dress ui-draggable"><br>
<a href="{{path('ajax_my_closet_delete',{'id': pi.Id}) }}">Remove</a>
<div style="height:10px"></div>
{%endfor%}
{%endfor%}
{% endblock %}
