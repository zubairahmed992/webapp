{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}

    <li><a href="{{ path('admin_support_user') }}" >Support User</a><span class="divider">/</span></li>
    <li class="active">Add</li>
{% endblock %}
{% block h1 %}Support User{% endblock %}
{% block title %}Support User{% endblock %}
{% block body %}
    <div>      
    <h1 style="float:left;">Add Support User</h1>
     <div class="btn_wrapper">     
<a href="{{ path('admin_support_user') }}" class="btn">back to list</a>
      </div>
      <div class="clearfix"></div>   

    <form action="{{ path('admin_support_user_create')}}" method="post" {{ form_enctype(form) }} onsubmit="return validates();">
 {{ form_errors(form) }}

            <div id="detail_wrapper">      
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                <div class="row-fluid show-grid">
                                    <div class="span3">Name</div>
                                    <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>                                   
                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">Email</div>
                                    <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>                                   
                                </div>

                                     <div class="row-fluid show-grid">
                                    <div class="span3">Password</div>
                                    <div class="span3">{{ form_widget(form.password) }}{{ form_errors(form.password) }}</div>                                   
                                </div>
                                    
                        <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>                                    
                                    <div class="span3">
				{{ form_rest(form) }}
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="Add" class="btn btn-primary"/> 

                                    </div>                                    
                                    </div>
                                </div>
                                    
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form> 


    
    
<!-- Modal -->
  
    

{% endblock %}

