{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_support_user') }}" >Support User</a></li>
{% endblock %}
{% block h1 %}Support User{% endblock %}
{% block title %}Support User{% endblock %}
{% block body %}
  <script>

        function checkPassword(){
            //jQuery('.fields_error').html('');
            var password = document.validatedForm.password.value;
            var cpassword = document.validatedForm.cpassword.value;


            if(password == ''){
                alert('Password can not be blank');
                return false;
            }
            if(cpassword == ''){
                alert('Confirm Password can not be blank');
                return false;
            }
            if(password != cpassword){
                alert('Password and Confirm password does not match,Please correct.');
                return false;
            }


        }
    </script>
    <div>      
    <h1 style="float:left;">Update {{entity.name}}</h1>
     <div class="btn_wrapper">     
<a href="{{ path('admin_support_user') }}" class="btn">back to list</a>
      </div>
      <div class="clearfix"></div>        
    <form  action="{{ path('admin_support_user_update', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}
            <div id="detail_wrapper">      
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                <div class="row-fluid show-grid">
                                    <div class="span3">Name</div>
                                    <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>                                   
                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">Email</div>
                                    <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>
                                </div>

                        <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>                                    
                                    <div class="span3">
				{{ form_rest(form) }}
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="Update" class="btn btn-primary"/> 

                                    </div>                                    
                                    </div>
                                </div>                                   
                                </div>
                                </div>
                                </div>      
                            </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form> 

<h1 style="float:left;">Change Password for {{entity.name}}</h1>

      <div class="clearfix"></div>
    <form id="validatedForm" name="validatedForm" action="{{ path('admin_support_user_change_password', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}
            <div id="detail_wrapper">
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                     <div class="row-fluid show-grid">
                                    <div class="span3">Password</div>
                                    <div class="span3"><input type="password" id="password"  name="password" required> </div>
                                </div>
                                        <div class="row-fluid show-grid">
                                    <div class="span3">Confirm Password</div>
                                    <div class="span3"><input type="password" id="password_confirm" name="cpassword" required> </div>
                                </div>
                        <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">
				{{ form_rest(form) }}
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" name="submit" value="Update" onclick="return checkPassword()" class="btn btn-primary"/>

                                    </div>
                                    </div>
                                </div>
                                </div>
                                </div>
                                </div>
                            </div><!-- End product_content -->
                    </div> <!-- End detail_wrapper -->
                </form>
            </div>
    
    

    

{% endblock %}

