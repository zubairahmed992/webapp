{% if limit!=0 or no_of_pagination!=0 %}

{% set first_btn = true %}
{% set previous_btn = true %}
{% set back=0 %}
{% set next_btn=true %}
{% set last_btn=true %}
<div class="pagination pagination-centered" >  
 <ul>
      {% if previous_btn and limit > 1 %}
       {% set  back = limit - 1 %}
        <li  class='active'>
  <a href="{{  path(controller_name,{'page_number':back,'limit':per_page_limit})}}"><<</a></li>
       {% elseif previous_btn %}
 <li class='disabled'>
 <a href="#_" ><< </a>
 </li>
      {% endif %}     
     {% for y in range(1,no_of_pagination) %}
      {% if limit==y %}  
      <li   class='active'>
       <a href="{{  path(controller_name,{'page_number':y,'limit':per_page_limit}) }}">{{y}}</a></li> 
       {% else %}   
        <li  class='active'>
            <a href="{{  path(controller_name)~'/'~ y~'/'~ per_page_limit }}">{{y}}</a>
        </li>
        {% endif %}  
        {% endfor %}

       {% if next_btn and limit < no_of_pagination %} 
                {% set nex = limit + 1%}
        <li  class='active'>
            <a href="{{  path(controller_name,{'page_number':nex,'limit':per_page_limit})}}" > >></a>
        </li>
                {% elseif next_btn %}
        <li class='disabled'>
        <a href="#_" >      
           >>
        </a>
            </li>
                {% endif %}   
       
    </ul>
 </div>
  {% endif %}