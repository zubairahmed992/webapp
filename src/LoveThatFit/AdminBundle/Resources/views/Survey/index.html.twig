          <div align="center">
          {{ form_widget(answerForm) }}
          </div>          
              <div align="center">
                  <input type="submit" value="Add Answer" style="margin-left:30px" />             
                  <a href="{{ path('admin_survey')}}" style="text-decoration:none;">
