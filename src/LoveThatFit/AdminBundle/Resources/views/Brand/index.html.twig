{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
       <li class="active">Brands</li>
{% endblock %}

{% block body %}
<div class="p_listing">     
    <h1 style="float:left;">Brands</h1>
<div class="btn_wrapper">     
     <a href="{{ path('admin_brand_new') }}" class="btn">Add New</a>
      </div>
     <div class="clearfix"></div>
    <div class="bs-docs-grid">              

    
       
    
        <div class="row-fluid show-grid">
            <div class="span3 hds"><a href="{{  path('admin_brands')~'/'~ 1~'/'~'id' }}" style=" text-decoration: none;">ID</a></div>
            <div class="span3 hds"><a href="{{  path('admin_brands')~'/'~ 1~'/'~'name' }}" style=" text-decoration: none;">Name</a></div>
            <div class="span3 hds"><a href="{{  path('admin_brands')~'/'~ 1~'/'~'logo' }}" style=" text-decoration: none;">Logo</a></div>
            <div class="span3 hds"></div>          
        </div>  

          {% for b in brands %}

        <div class="row-fluid show-grid">
            <div class="span3 show">{{b.Id}}</div>
            <div class="span3 show">{{b.Name}}</div>
            <div class="span3 show"><img src="{{ asset(b.WebPath) }}"/></div>
            <div class="span3 show">                  
                <div>
                    <a href="{{ path('admin_brand_show', {'id': b.Id}) }}"><i class="icon-eye-open"></i></a>
                    <a href="{{ path('admin_brand_edit', {'id': b.Id}) }}"><i class="icon-edit"></i></a>
                    <a href="{{ path('admin_brand_delete', {'id': b.Id}) }}">del</a>
                </div> 
            </div>              
        </div>


{% endfor %}



    </div>
     {% include 'LoveThatFitAdminBundle::_pagination.html.twig'
  with {'rec_count':rec_count,'limit':limit,'per_page_limit':per_page_limit,'no_of_pagination':no_of_pagination
,'controller_name':'admin_brands'}
        %}  
</div>


{% endblock %}
