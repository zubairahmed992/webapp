                        <option value="plus"> Plus</option>

                    </select>
                </div>
            </div>

            <div class="row-fluid show-grid">
                <div class="span3">Styling Details</div>
                <div class="span3">
                    <select name="styling_details" id="styling_details">
                        <option value=""> Select</option>
                    </select>
