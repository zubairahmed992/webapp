            <div class="row-fluid show-grid">
                <div class="span3">Structural Details</div>
                <div class="span3">
                    <select name="structural_details" id="structural_details">
                        <option value=""> Select</option>
                    </select>
                </div>
            </div>    
            <div class="row-fluid show-grid">
                <div class="span3">Fabric Content</div>
                <div class="span3">
                    <input type="text" id="fabric_content" name="fabric_content" maxlength="255">
                </div>
            </div>
            <div class="row-fluid show-grid">
                <div class="span3">Fit Priority</div>
                <div class="span3">
