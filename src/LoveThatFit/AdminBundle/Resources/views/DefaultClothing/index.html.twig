{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
    <li class="active">Default Clothing</li>
{% endblock %}

{% block body %}
    <style>
        .custom_search {
            position: relative;
            bottom: -40px;
        }

        .custom_search label, .custom_search select {
            width: 80%;
            padding-left: 10px;
            position: relative;
            z-index: 1;
        }

        .custom_search label {
            display: inline-block;
        }

        .dataTables_wrapper .dataTables_length {
            float: right !important;
            margin-left: 12px;
        }

        @media only screen and (max-width: 767px) {
            .custom_search {
                bottom: 0px;
            }
        }


    </style>

    <div class="p_listing">
        <div class="clearfix"></div>
        <h1 style="float:left;">Default Clothing</h1>
        <div class="btn_wrapper2">
            <div class="btn-group" role="group" aria-label="..." style="float:right;">
                <a href="{{ path('admin_default_clothing_new') }}" class="btn btn-default">Add New</a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="bs-docs-grid">
        <div class="container">
            <div class="row">

                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Control Number</th>
                        <th>Brand</th>
                        <th>Type</th>
                        <th>Target</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="deleteGroupModel" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">ï¿½</button>
            <h3 id="myModalLabel">Delete FNF Group</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to Delete this FNF Group? All User of this group will also delete.</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            <a href="" class="btn btn-primary delete_url">Delete</a>
        </div>
    </div>
    <script type="text/javascript">
        var oColumns = [
            {
                "data": "id",
                "searchable": false,
                "width": "5%",
            },
            {
                "data": "control_number",
                "width": "12%",
            },
            {
                "data": "BName",
                "width": "10%",
            },
            {
                "data": "ClothingType",
                "width": "10%",
            },
            {
                "data": "target",
                "orderable": true,
                "searchable": false,
                "width": "15%",
            },
            {
                "data": "PName",
                "searchable": true,
                "width": "15%",
            },
            {
                "data": "created_at",
                "searchable": false,
                "orderable": true,
                "width": "20%",
            },
            {
                "title": "Actions",
                "targets": -1,
                "data": null,
                "orderable": false,
                "searchable": false,
                "defaultContent": EditButton,
                "width": "5%"
            },
            {
                "data": "original_user_id",
                "searchable": false,
                "visible": false
            }
        ];
        jQuery(document).ready(function () {
            var notShownIDs = [2725, 2735, 2731, 2680, 2703, 2444, 2729];
            dataTable = $('#example').dataTable({
                "processing": true,
                "serverSide": true,
                "destroy": true,
                "ajax": {
                    "url": "{{ path('default_clothing_paginate') }}",
                    "type": "POST",
                    "data": {},
                },
                "sAjaxDataProp": "data",
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "pagingType": "full_numbers",
                "order": [[0, "desc"]],
                "columns": oColumns,
                "createdRow": function (row, data, index) {
                    if (data["original_user_id"] != null) {
                        $('td', row).addClass('duplicate_user_class');
                    }
                    if (jQuery.inArray(data["id"], notShownIDs) != -1) {
                        $('td', row).addClass('hide_grid_row');
                    }
                },
            });

            $.fn.dataTable.ext.errMode = 'none';
            jQuery('#example tbody').on('click', 'button, a, img', function () {
                var dataAction = $(this).attr('data-action');

                if (dataAction == 'Edit') {
                    var url = '{{ path('admin_default_clothing_new') }}';
                    window.top.location = url;
                }
            });
            // bindClickEvent();
        });
    </script>
{% endblock %}