{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_marketingtiles') }}" >Marketing Tiles</a> <span class="divider">/</span></li>
<li class="active">Edit</li>
{% endblock %}

{% block h1 %}Marketing Tiles{% endblock %}

{% block title %}Marketing Tiles{% endblock %}


{% block body %}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
$(document).ready(function(){
    document.getElementById("marketing_tiles_file").required = false;
});
</script>

<div>
    <h1 style="float:left;">Edit Marketing Tiles</h1>
    <div class="btn_wrapper">
        <a href="{{ path('admin_marketingtiles') }}" class="btn">back to list</a>
             {#<a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>#}
    </div>
    <div class="clearfix"></div>

    <form action="{{ path('admin_marketing_tiles_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    <div id="detail_wrapper">
        <div id="p_hd">Marketing Tiles Detail</div>


        <div id="product_content">
            <div id="pro_detail">
                <div class="edt_container">

                    <div class="row-fluid show-grid">
                        <div class="span3">Title</div>
                        <div class="span3">{{ form_widget(form.title) }}{{ form_errors(form.title) }}</div>
                    </div>

                    <div class="row-fluid show-grid" style="margin-bottom:10px !important;">
                        <div class="span3" style="padding-top:0px !important;">Description</div>
                        <div class="span3" style="padding-top:0px !important;">{{ form_widget(form.description) }}{{ form_errors(form.description) }}</div>
                    </div>

                    <div class="row-fluid show-grid">
                        <div class="span3">Sort Order</div>
                        <div class="span3"><input type="hidden" id="sorting_db_value" name="sorting_db_value" value="{{ entity.sorting }}" />{{ form_widget(form.sorting) }}{{ form_errors(form.sorting) }}</div>
                    </div>

                    <div>
                        <p  id="error" style="color:#d14; size:10; display:none;">Please Upload Valid image</p>
                            <div class="span3">
                                <strong><br/>  Upload Marketing Tiles Image</strong>
                            </div>
                        <div id="pro_img"><img src="{{ asset(entity.WebPath) }}"/>
                         </div>
                    </div>
                    <div class="row-fluid show-grid" style="clear:both">
                       {{ form_rest(form) }}
                        <div class="span3">&nbsp;</div>
                        <div class="span3"><div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-primary"/>
                        <a href="{{ path('admin_marketingtiles') }}" class="btn btn-primary">Cancel    </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End pro_detail -->
    </div><!-- End product_content -->
    </div> <!-- End detail_wrapper -->
    </form>
      
          
            </div> 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Marketing Tiles</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Marketing Tiles <b>{{entity.title }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_marketing_tiles_delete', {'id': entity.id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>
{% endblock %}

