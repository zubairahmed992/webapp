{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_marketingtiles') }}" >Marketing Tiles</a> <span class="divider">/</span></li>
<li class="active">Show</li>
{% endblock %}


{% block h1 %}Marketing Tiles{% endblock %}

{% block title %}Marketing Tiles{% endblock %}


{% block body %}

<div>
    <h1 style="float:left;">Marketing Tiles Details</h1>
     <div class="btn_wrapper">
         <a href="{{ path('admin_marketingtiles',{'page_number':page_number}) }}" class="btn">back</a>
         <a href="{{ path('admin_marketing_tiles_edit', {'id': marketing_tiles.id}) }}" class="btn">Edit</a>

        <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>

      </div>
      <div class="clearfix"></div>


            <div id="detail_wrapper">
                <div id="p_hd">Marketing Tiles Detail</div>

                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                <div class="row-fluid show-grid edt_span">
                                    <div>
                                    {% if marketing_tiles.title != ''  %}
                                        <div class="span8">
                                            <div class="span3">Title</div>
                                            <div class="span3">{{marketing_tiles.title }}</div>
                                        </div>
                                    {% endif %}
                                    {% if marketing_tiles.description != ''  %}
                                        <div class="span8">
                                            <div class="span3" style="border-bottom:none !important;">Description</div>
                                            <div class="span5" style="border-bottom:none !important;">{{marketing_tiles.description }}</div>
                                        </div>
                                    {% endif %}
                                    {% if marketing_tiles.button_title != ''  %}
                                        <div class="span8">
                                            <div class="span3">Button Title</div>
                                            <div class="span3">{{marketing_tiles.button_title }}</div>
                                        </div>
                                    {% endif %}
                                    {% if marketing_tiles.button_action != ''  %}
                                        <div class="span8">
                                            <div class="span3">Button Action</div>
                                            <div class="span3">{{marketing_tiles.button_action }}</div>
                                        </div>
                                    {% endif %}
                                    {% if marketing_tiles.sorting != ''  %}
                                        <div class="span8">
                                            <div class="span3">Sorting</div>
                                            <div class="span3">{{marketing_tiles.sorting }}</div>
                                        </div>
                                    {% endif %}
                                    {% if marketing_tiles.target_url != ''  %}
                                        <div class="span8">
                                            <div class="span3">Target URL</div>
                                            <div class="span3">{{marketing_tiles.target_url }}</div>
                                        </div>
                                    {% endif %}
                                    </div>
                                    <div>
                                    {% if marketing_tiles.image != ''  %}
                                        <div>
                                            <div><img src="/uploads/ltf/marketing_tiles/web/{{ marketing_tiles.image }}" style="height: 150px !important;width: auto !important;"/></div>
                                        </div>
                                    {% endif %}
                                    </div>
                                    </div>
                                </div>
                                </div>
                            </div><!-- End pro_detail -->
                        </div><!-- End product_content -->
                    </div> <!-- End detail_wrapper -->
                </form>
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Marketing Tiles</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Marketing Tiles <b>{{marketing_tiles.title }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_marketing_tiles_delete', {'id': marketing_tiles.id}) }}"  class="btn btn-primary">Delete</a>

  </div>
</div>
            </div>

{% endblock %}

