{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_shop_look') }}" >Shop the Look</a> <span class="divider">/</span></li>
    <li class="active">New</li>
{% endblock %}

{% block h1 %}Shop the Look{% endblock %}

{% block title %}Shop the Look{% endblock %}

{% block body %}

<style type="text/css">
.categoryerror{
    border-color: #e9322d;
    -webkit-box-shadow: 0 0 6px #f8b9b7;
    -moz-box-shadow: 0 0 6px #f8b9b7;
    box-shadow: 0 0 6px #f8b9b7;
}

.chzn-choices{
    height: 100px !important;
}

.edt_container{
    height: 500px !important;
}
</style>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link href="{{ asset('bundles/chosen/chosen.css') }}" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="{{ asset('bundles/chosen/chosen.jquery.js') }}"></script>


    <script>
        $(document).ready(function(){
            var config = {
                '.chzn-select'  : {max_selected_options: 3},
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }
        });
    </script>

<div>      
    <h1 style="float:left;">Shop to Look </h1>
    <div class="btn_wrapper">     
        <a href="{{ path('admin_shop_look') }}" class="btn">back</a>
    </div>
    <div class="clearfix"></div>   
    <form action="{{ path('admin_shop_look_create') }}" method="post" enctype="multipart/form-data" onsubmit="submitform()">

        <div id="detail_wrapper">
            <div id="p_hd">Shop the Look</div>
            <div id="product_content">
                <div id="pro_detail">
                    <div class="edt_container">

                        <div class="row-fluid show-grid">
                            <div class="span3">Shop Look Name</div>
                            <div class="span3"><input type="text" id="name" name="name" required /></div>
                        </div>

                        <div class="row-fluid show-grid">
                            <div class="span3">Sort Order</div>
                            <div class="span3"><input type="number" min="0" id="sorting" name="sorting" required /></div>
                        </div>

                        <div class="row-fluid show-grid">
                                <div class="span3">Upload Banner Image</div>
                                <div class="span3"><input type="file" id="shop_model_image" name="shop_model_image" required accept="image/*"></div>
                        </div>
                        <div class="row-fluid show-grid">
                            <div class="span3">Disabled</div>
                            <div class="span3"><input type="checkbox" id="disabled" name="disabled" value="1"></div>
                        </div>
                        <div class="row-fluid show-grid">
                            <div class="span3">Products</div>
                                <select data-placeholder="" style="width:350px;" multiple class="chzn-select chzn-sortable" id="products" name="products[]" tabindex="8">
                                    {% for product in getAllProductList %}
                                        <option value="{{ product.id }}" >{{ product.name }}</option>
                                    {% endfor %}
                                </select>
                        </div>
                        <div class="row-fluid show-grid">
                            <div class="span3"><input type="submit" value="SAVE" class="btn btn-small btn-primary"/></div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End pro_detail -->
    </form>
</div>  
{% endblock %}

