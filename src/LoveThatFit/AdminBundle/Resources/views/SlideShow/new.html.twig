{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_slides') }}" >Slide Show</a> <span class="divider">/</span></li>
<li class="active">New</li>
{% endblock %}

{% block h1 %}Slide Show{% endblock %}

{% block title %}Slide Show{% endblock %}

{% block body %}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
function validates(){
    var extensions = new Array("jpg","jpeg","gif","png","bmp","png");

    var image_file = document.getElementById('form_file').value;
    var image_length = document.getElementById('form_file').length;

    var pos = image_file.lastIndexOf('.') + 1;
    var ext = image_file.substring(pos, image_length);
    if(image_file!=""){
        var final_ext = ext.toLowerCase();
        for (i = 0; i < extensions.length; i++){
            if(extensions[i] == final_ext){
                return true;
            }

        }
        document.getElementById('error').style.display="block";
        return false;

    }
    return true;
}
</script>
<div>      
    <h1 style="float:left;">New Slide Show </h1>
    <div class="btn_wrapper">     
        <a href="{{ path('admin_slides') }}" class="btn">back</a>
    </div>
    <div class="clearfix"></div>   
    <form action="{{ path('admin_slide_show_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

            <div id="detail_wrapper">      
                <div id="p_hd">Slide Show Detail</div>

                <div id="product_content">
                    <div id="pro_detail">
                        <div class="edt_container">

                            <div class="row-fluid show-grid" id="banner-name-div">
                                <div class="span3">Title</div>
                                <div class="span3">{{ form_widget(form.title) }}{{ form_errors(form.title) }}</div>
                            </div>

                            <div class="row-fluid show-grid" id="banner-description-div" style="margin-bottom:10px !important;">
                                <div class="span3" style="padding-top:0px !important;">Description</div>
                                <div class="span3" style="padding-top:0px !important;">{{ form_widget(form.description) }}{{ form_errors(form.description) }}</div>
                            </div>

                            <div class="row-fluid show-grid">
                                <div class="span3">Sort Order</div>
                                <div class="span3">{{ form_widget(form.sorting) }}{{ form_errors(form.sorting) }}</div>
                            </div>

                            <div>
                                <p  id="error" style="color:#d14; size:10; display:none;">Please Upload Valid image</p>
                                    <div class="span3">
                                        <strong><br/>  Upload Image</strong>
                                    </div>
                                    {{ form_rest(form) }}
                            </div>

                            <div class="row-fluid show-grid">                                   
                                <div class="span3">&nbsp;</div>                                   
                                <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/></div>                                    
                            </div>
                        </div>
                    </div>
                </div>      
            </div><!-- End pro_detail -->      
    </div><!-- End product_content --> 

</form>    
</div>  
{% endblock %}

