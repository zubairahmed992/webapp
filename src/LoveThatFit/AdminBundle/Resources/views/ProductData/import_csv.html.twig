{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
  <li><a href="{{ path('admin_products') }}" >Products</a> <span class="divider">/</span>Import CSV</li>   
{% endblock %}
{% block body %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script type="text/javascript">

  $(document).ready(function(){
      $( "select[id='form_products']" ).change(function() {
          $("#product_id").val(this.value);
          $('#product_keyword_import').val($('option:selected', $(this)).text());
      });
  });
  </script>
      <div>      
    <h1 style="float:left;">Upload Product CSV File </h1>  
     <div class="btn_wrapper"><a href="{{ path('admin_products') }}" class="btn">back to list</a></div>
      <div class="clearfix"></div>       
          
          <div id="detail_wrapper">
              <div id="product_content">
                          <form action="{{path('admin_product_data_csv_upload')}}" method="post" {{ form_enctype(form) }}>
                          <div class="edt_container">
                                    {% if product is defined and product is not empty%}
                                        <div class="row-fluid show-grid">
                                                  <div class="span3"></div>
                                                  <div class="span3"><a href="{{path('admin_product_detail_show', {'id':product.id})}}">{{product.name}}</a> has been added to the system.</div>
                                        </div>
                                    {% endif %}

                     <div class="row-fluid show-grid">
                                  <div class="span3">products</div>
                                  <div class="span3">{{ form_widget(form.products) }}{{ form_errors(form.products) }} </div>

                                  </div>

                              <div class="row-fluid show-grid">
                                  <div class="span3">Or</div>
                                  <div class="span3"><input type="text" placeholder="Select Product" id="product_keyword_import"><input type="hidden" id="product_id"></div>

                              </div>


                            <div class="row-fluid show-grid">
                                  <div class="span3">Testing </div>
                                  <div class="span3">{{ form_widget(form.preview) }}{{ form_errors(form.preview) }} preview only</div>
                                  <div class="span3">{{ form_widget(form.raw) }}{{ form_errors(form.raw) }} raw
                                  </div>

                              </div>

                               <div class="row-fluid show-grid">
                                  <div class="span3">Select CSV File</div>
                                  <div class="span3">{{ form_widget(form.csvfile) }}{{ form_errors(form.csvfile) }}</div>
                              </div>
                              <div class="span3">
                                  <div style="margin:0px 0px 0px 0px;">
                                      <input type="submit" value="Upload" class="btn btn-large btn-primary"/>
                                  </div>
                              </div>
                          </div>
                              </form>
                      
                  
              </div><!-- End pro_detail -->      
          </div><!-- End product_content --> 

{% endblock %}
     