{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_clothing_types') }}">Clothing Types</a> <span class="divider">/</span></li>
    <li class="active">Edit</li>
{% endblock %}

{% block h1 %}Clothing Types{% endblock %}

{% block title %}Clothing Type{% endblock %}

{% block body %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script>
        function validates() {
            var extensions = new Array("jpg", "jpeg", "gif", "png", "bmp", "png");

            var image_file = document.getElementById('form_file').value;
            var image_length = document.getElementById('form_file').length;

            var pos = image_file.lastIndexOf('.') + 1;
            var ext = image_file.substring(pos, image_length);
            if (image_file != "") {
                var final_ext = ext.toLowerCase();
                for (i = 0; i < extensions.length; i++) {
                    if (extensions[i] == final_ext) {
                        return true;
                    }

                }
                document.getElementById('error').style.display = "block";
                return false;

            }
            return true;
        }
        $(document).ready(function () {
            var gender = $('input[type="radio"]:checked').val();
            if (gender == 'm') {
                $("#ClothingType_target option[value='dress']").prop('disabled', true);
            } else {
                $("#ClothingType_target option[value='dress']").prop('disabled', false);
            }
            $("#ClothingType_gender_0, #ClothingType_gender_1").change(function () {
                var gender = $('input[type="radio"]:checked').val();
                if (gender == 'm') {
                    $("#ClothingType_target option[value='dress']").prop('disabled', true);
                } else {
                    $("#ClothingType_target option[value='dress']").prop('disabled', false);
                }
            });
        });
    </script>

    <div>
        <h1 style="float:left;">Edit Clothing Type</h1>
        <div class="btn_wrapper">
            <a href="{{ path('admin_clothing_types') }}" class="btn">back to list</a>
            {#<a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>#}
        </div>
        <div class="clearfix"></div>
        <form id="clothyingForm" name="clothyingForm"
              action="{{ path('admin_clothing_type_update', { 'id': entity.id }) }}"
              method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}

            <div id="detail_wrapper">
                <div id="p_hd">Product Detail</div>


                <div id="product_content">
                    <div id="pro_detail">
                        <div class="edt_container">
                            <div class="row-fluid show-grid">
                                <div class="span3">Name</div>
                                <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>

                            </div>
                            <div class="row-fluid show-grid">
                                <div class="span3">Average Weight (oz)</div>
                                <div class="span3">{{ form_widget(form.average_weight, { 'attr': {'min' :"0"} }) }}{{ form_errors(form.average_weight) }}</div>
                                <small style="position: relative;left: -580px;font-size: 10px;font-weight: bold;top: 40px;color: #3a87ad;">Number and float values are allowed</small>
                            </div>

                            <div class="row-fluid show-grid">
                                <div class="span3">Heaviest Weight (oz)</div>
                                <div class="span3">{{ form_widget(form.heaviest_weight, { 'attr': {'min' :"0"} }) }}{{ form_errors(form.heaviest_weight) }}</div>
                                <small style="position: relative;left: -580px;font-size: 10px;font-weight: bold;top: 40px;color: #3a87ad;">Number and float values are allowed</small>
                            </div>

                            <div class="row-fluid show-grid">
                                <div class="span3">Target</div>
                                <div class="span3">{{ form_widget(form.target) }}{{ form_errors(form.target) }}</div>

                            </div>

                            <div>
                                <p id="error" style="color:#d14; size:10; display:none;">Please Upload Valid image</p>
                                <div class="span3">
                                    <strong><br/> Upload Clothing Type Image</strong>
                                </div>
                                <div id="pro_img"><img src="{{ asset(entity.WebPath) }}"/>
                                </div>
                            </div>
                            <div class="row-fluid show-grid" style="clear:both">
                                {{ form_rest(form) }}
                                <div class="span3">&nbsp;</div>
                                <div class="span3">
                                    <div style="margin:0px 0px 0px 0px;">
                                        <input name="defaultClothing" value="{{ isDefaultClothing }}" type="hidden">
                                        <input type="submit" value="SAVE"class="btn btn-primary"/>
                                        <a href="{{ path('admin_clothing_types') }}" class="btn btn-primary">Cancel </a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div><!-- End pro_detail -->
            </div><!-- End product_content -->
    </div> <!-- End detail_wrapper -->
    </form>


    </div>
    <!-- Modal -->
    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Delete Product</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to Delete this Product <b>{{ entity.name }}</b>?</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            <a href="{{ path('admin_clothing_type_delete', {'id': entity.id}) }}" class="btn btn-primary">Delete</a>

        </div>
    </div>

    <script type="text/javascript">
        $( "#clothyingForm" ).submit(function(event) {
            avg_wt = $( "#ClothingType_average_weight" ).val();
            hvy_wt = $( "#ClothingType_heaviest_weight" ).val();
            isdefaultClothing = $("input[name=defaultClothing]").val();
            clothingDisable = $("#ClothingType_disabled").is(":checked");
            error  = 0;
            if (avg_wt < 0) {
                $("#avg").remove();
                error =1;
                $( "#ClothingType_average_weight" ).css('border-color','red');
                $("#ClothingType_average_weight").parent().parent().after("<div id='avg' style='color:red;margin-left: 15%;'>Negative values are not allowed</div>");
            } else {
                $( "#ClothingType_average_weight" ).css('border-color','#cccccc');
                $("#avg").remove();
            }
            if (hvy_wt < 0) {
                $("#hvy").remove();
                error =1;
                $( "#ClothingType_heaviest_weight" ).css('border-color','red');
                $("#ClothingType_heaviest_weight").parent().parent().after("<div id='hvy' style='color:red;margin-left: 15%;'>Negative values are not allowed</div>");
            } else {
                $( "#ClothingType_heaviest_weight" ).css('border-color','#cccccc');
                $("#hvy").remove();
            }
            if (error == 1) {
                $('html, body').animate({
                    scrollTop: $("body").offset().top
                }, 1000);
                return false;
            }
            if(isdefaultClothing == 1 && clothingDisable){
                var confirmation = confirm("You are disabling a Clothing Type which is added as the Default Clothing, so are you sure you want to continue?");
                if (confirmation == true ) {
                    return true;
                }else
                    return false;

            }
            else {
                $( "#clothyingForm" ).submit();
            }
        });
    </script>
{% endblock %}

