{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
  <li class="active">Clothing Types </li>
{% endblock %}

{% block body %}
<style type="text/css">
.row-fluid .span1 {
  width: 11%!important;
}
.row-fluid {
    padding-top: 8px;
}
</style>
<div class="p_listing">
  <h1>Clothing Types</h1>
  <div class="clearfix"></div>
    {% block header_right_links %}
    <div class="adjustment_links" style="margin-top: 20px; float:right;">
      <a href="{{ path('admin_clothing_type_add_cron') }}" >Send Notifications</a> 
    </div>
    {% endblock %}
    <div class="clearfix"></div>
    <div class="clearfix"></div>
    <div class="bs-docs-grid">
      <div class="row-fluid">
        <div class="span1 hds span2">ID</div>
        <div class="span1 hds">Name</div>
        <div class="span1 hds">Target</div>
        <div class="span1 hds">Gender</div>
        <div class="span1 hds">Average Weight <br>(oz)</div>
        <div class="span1 hds">Heaviest Weight <br>(oz)</div>
        <div class="span1 hds">Created At</div>
        <div class="span1 hds">Image</div>
        <div class="span1 hds"></div>
      </div>
      {% for ct in clothing_types %}
        <div class="row-fluid show-grid space_wrap">
          <div class="span1">
            <a href="{{ path('admin_clothing_type_edit', {'id': ct.Id}) }}">{{ct.Id}}</a>
          </div>
          <div class="span1 span2">{{ct.Name|capitalize |replace({'_': ' ', '_': " "}) }}</div>
          <div class="span1">{{ct.Target}}</div>
          <div class="span1">{{ct.Gender}}</div>
          <div class="span1">{{ct.AverageWeight}}</div>
          <div class="span1">{{ct.HeaviestWeight}}</div>
          <div class="span1">{{ct.createdAt|date('d-m-Y') }}</div>
          <div class="span1"><img src="{{ asset(ct.WebPath) }}"/></div>
          <div class="span1">{%if(ct.disabled==1)%} Disabled {%else%}  {%endif%}</div>
        </div>
      {% endfor %}
    </div> 
  </div>
</div>
{% endblock %}