     <div class="btn_wrapper">     
      <a href="{{ path('admin_retailers',{'page_number':page_number}) }}" class="btn">back</a>
      {%if retailer.id %}
      <a href="{{ path('admin_retailer_edit', {'id': retailer.id}) }}" class="btn">Edit</a>      
