{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_retailers') }}" >Retailers</a> <span class="divider">/</span></li>
<li class="active">New</li>
{% endblock %}

{% block h1 %}Retailers{% endblock %}

{% block title %}Retailers{% endblock %}


{% block body %}
<div>      
    <h1 style="float:left;">New Retailer </h1>
     <div class="btn_wrapper">     
     <a href="{{ path('admin_retailers') }}" class="btn">back</a>     
     </div>
      <div class="c learfix"></div>   
    <form action="{{ path('admin_retailer_create') }}" method="post" {{ form_enctype(form) }} onsubmit="return validates();">
 {{ form_errors(form) }}

            <div id="detail_wrapper">      
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid">
                                    <div class="span3">Title</div>
                                    <div class="span3">{{ form_widget(form.title) }}{{ form_errors(form.title) }}</div>
                                   
                                </div> 
                                
                                    
                                <div class="row-fluid show-grid">
                                    <div class="span3">Email</div>
                                    <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>
                                   
                                </div> 
                                
                                 <div class="row-fluid show-grid">
                                    <div class="span3">Password</div>
