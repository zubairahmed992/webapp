{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_retailers') }}" >Retailes</a> <span class="divider">/</span></li>
<li class="active">Edit</li>
{% endblock %}
{% block h1 %}Retailer{% endblock %}
{% block title %}Retailer{% endblock %}
{% block body %}
    <div>      
    <h1 style="float:left;">Update Retailer User</h1>
     <div class="btn_wrapper">     
<a href="{{ path('admin_retailers') }}" class="btn">back</a>
      </div>
      <div class="clearfix"></div>        
    <form action="{{ path('admin_retailer_update_user', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}
            <div id="detail_wrapper">      
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                <div class="row-fluid show-grid">
                                    <div class="span3">Name</div>
                                    <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>                                   
                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">Email</div>
                                    <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>                                   
                                </div>
                                   <div class="row-fluid show-grid">
                                    <div class="span3">User Name</div>
                                    <div class="span3">{{ form_widget(form.username) }}{{ form_errors(form.username) }}</div>                                   
                                </div>
                                     <div class="row-fluid show-grid">
                                    <div class="span3">Password</div>
                                    <div class="span3">{{ form_widget(form.password) }}{{ form_errors(form.password) }}</div>                                   
                                </div>
                        {{ form_rest(form) }}
                                    <div class="span3">				
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/>                                     
                                    </div>    
                                            <a href="{{ path('admin_retailer_show', {'id': entity.retailer.id})}}" class="btn">cancel</a>
                                    </div>
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form> 
      
     
            </div> 
    
    

    

{% endblock %}

