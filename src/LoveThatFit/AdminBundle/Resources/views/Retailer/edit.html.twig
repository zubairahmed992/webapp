{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_retailers') }}" >Retailes</a> <span class="divider">/</span></li>
<li class="active">Edit</li>
{% endblock %}
{% block h1 %}Retailer{% endblock %}
{% block title %}Retailer{% endblock %}


{% block body %}

    
  
    <div>      
    <h1 style="float:left;">Edit Retailer</h1>
     <div class="btn_wrapper">     
<a href="{{ path('admin_retailers') }}" class="btn">back</a>
             
{%if entity.id %}
      <a href="{{ path('admin_retailer_edit', {'id': entity.Id}) }}" class="btn">Edit</a>      
      <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>
      {% endif %}
      </div>
      <div class="clearfix"></div>   
      {%if entity.id %}
    <form action="{{ path('admin_retailer_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}

            <div id="detail_wrapper">      
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid">
                                    <div class="span3">Title</div>
                                    <div class="span3">{{ form_widget(form.title) }}{{ form_errors(form.title) }}</div>                                   
                                </div>
                                    
                        {{ form_rest(form) }}
                                    <div class="span3">				
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/>                                     
                                    </div>                                    
                                    </div>
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form> 
      
          {% endif %}
            </div> 
    
    
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Brand</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Retailer <b>{{entity.title }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_brand_delete', {'id': entity.id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>    
    

{% endblock %}

