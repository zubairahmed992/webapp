{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
<script>
function showTextBox(id){
    $('#msg_show'+id).toggle();
    $('#msg_hide'+id).toggle();
}
function deleteNotification(id)
{
    $('#myModalDel'+id).hide();
     $.ajax({
        type:'POST',
        url: $('#del_url').text(),
        data: {id: id},  
        success: function(data) {
       location.reload();
       }
   });
       
}
function sendNotification(id){
    
    var msg=$('#msg'+id).val();
    active_class=$.trim($('#active_class'+id).text());
    if(active_class=="Active"){
        
    
    if($.trim(msg)!=''){
   var msg_sent=msg;
    }if($.trim(msg)==''){
     msg_sent=null;
    }
      $('#myModaldetail'+id).hide();
     $.ajax({
        type:'POST',
        url: $('#url').text(),
        data: {id: id,msg:msg_sent},  
        success: function(data) {
       
         location.reload();
         $('#notificaltion_msg').show();
       }
   });
     }
else{
alert("Selected Notifcation not activated!");
 }     
}   
     

function in_active(id){

var active_class=$.trim($('#active_class'+id).text());
if(active_class=='Active'){
$('#active_class'+id).replaceWith(' <a href="#_" class="in_active_class" id="in_active_class'+id+'" onclick="activeit('+id+')">InActive</a>');
$.ajax({
        type:'POST',
        url: $('#status_url').text(),
        data: {id:id,isActive:0},  
        success: function(data) {
       }
   });


}
}
function activeit(id){
var active_class=$.trim($('#in_active_class'+id).text());
if(active_class=='InActive'){
$('#in_active_class'+id).replaceWith('<a href="#_" class="active_class" id="active_class'+id+'" onclick="in_active('+id+')">Active</a>');
$.ajax({
        type:'POST',
        url: $('#status_url').text(),
        data: {id:id,isActive:1},  
        success: function(data) {
       
       }
   });

 }
}
    </script>

<li class="active">Products</li>
{% endblock %}



{% block body %}
 
    <span id="admin_product_zip" style="display:none;">{{path('admin_product_detail_zipdownlaod')}}</span>
<div class="p_listing">     
    <h1>Products</h1>
 
    
    
    <div class="btn_wrapper2">
     
        <div id="notificaltion_msg" style=" display: none;"><b>Notification has been successfully sent.</b></div>   
      </div>
    
    
    
    
    
    
    
     <div class="clearfix"></div> 
     
    <div class="bs-docs-grid">              

        <div class="row-fluid product_main">
            <div class="span1 hds"><a href="#_" style=" text-decoration: none;"> ID</a></div>
            <div class="span1 hds"><a href="#_">Last UserId</a></div>
            <div class="span1 hds"><a href="#_">Message</a></div>
            <div class="span1 hds"><a href="#_">Type</a></div>
            <div class="span1 hds"><a href="#_">Status</a></div>
            <div class="span1 hds">Action</div>  
            
        </div>  

          {% for p in get_all_notification %}

        <div class="row-fluid show-grid product_main">
            <div class="span1">{{p.Id}}</div>
            <div class="span1">{{p.userId}}</div>
            <div class="span1">{{p.message}}</div>
            <div class="span1">{{p.notificationType}}</div>
            <div class="span1">
               {% if(p.isActive==1)%}  
                <a href="#_" class="active_class" id="active_class{{p.Id}}" onclick="in_active('{{p.Id}}')"> Active</a>
               {% else%}
               <a href="#_" class="in_active_class" id="in_active_class{{p.Id}}" onclick="activeit('{{p.Id}}')">InActive</a>
               {% endif%} 
          </div>
           <div class="span1">
               <a  style="vertical-align:text-top;"href="#myModaldetail{{p.Id}}" title="Send Push Notification" role="button" data-toggle="modal"><i class="icon-ok-sign"></i></a>
             <a  style="vertical-align:text-top;"href="#myModalDel{{p.Id}}" title="Delete {{p.message}}" role="button" data-toggle="modal"> <i class="icon-remove-sign"></i></a>
           </div>
            
        </div>
        <span id="status_url" style="display:none;">{{path('admin_pushnotification_status')}}</span>
        

<!-- ModalDetail -->
<div id="myModaldetail{{p.Id}}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
   <span id="url" style="display:none;">{{path('admin_pushnotiifcation_send')}}</span>
