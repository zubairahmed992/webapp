    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="#"  class="btn btn-primary" onclick="deleteNotification('{{p.Id}}')">Delete</a>
    
  </div>
</div>     


 </div> 
{% endfor %}
