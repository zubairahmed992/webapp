                                    <div class="span3">
                                    {{ form_widget(form.ideal_body_size_high) }}{{ form_errors(form.ideal_body_size_high) }}
                                      <div class="login_error" >
                                                    <div id="error_ideal_body_size_high" style="display:none;color: #DD1144;font-size: 0.8em;
                                                         text-align:left">
