{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
  <li><a href="{{ path('admin_products') }}" >Products</a> <span class="divider">/</span>Import CSV</li>   
{% endblock %}
{% block body %}
      <div>      
    <h1 style="float:left;">Upload Product CSV File </h1>  
    <div class="btn_wrapper">     
<a href="{{ path('admin_products') }}" class="btn">back to list</a>
      </div>
      <div class="clearfix"></div>   
      {% if product is defined %}
      <div>
                <a href="{{path('admin_product_detail_show', {'id':product.id})}}">{{product.name}}</a> has been added to the system.
                </div>
      {% endif %}
    <form action="{{path('admin_product_csv_upload')}}" method="post" {{ form_enctype(form) }}>
        <div id="detail_wrapper">
            <div class="span3">Upload CSV File</div>
      <div class="row-fluid show-grid">    
{{ form_widget(form.csvfile) }}{{ form_errors(form.csvfile) }}
</div> 
       <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="Upload CSV File" class="btn"/>      <a href="" class="btn">CANCEL</a>                                   
    </form>
</div>
  
  
  
        </div>
{% endblock %}
     