{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %} 
<li><a href="{{ path('admin_products') }}" >Products</a> <span class="divider">/</span></li>
          <li class="active">Show</li>         
{% endblock %}
          
{% block h1 %}Products{% endblock %}

{% block title %}Products{% endblock %}


{% block body %}
<div>      
    <h1 style="float:left;">Product Details</h1>
     
    <div class="btn_wrapper">     
      <a href="{{ path('admin_products') }}" class="btn">back</a>
      <a href="{{ path('admin_product_edit', {'id': product.Id}) }}" class="btn">Edit</a>      
      <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>
     </div>
      <div class="clearfix"></div>   
    

            <div id="detail_wrapper">      
                <div id="p_hd">Product Detail</div>
                <div class="span3">
                    <div id="pro_img"> <img src="{{ asset(product.WebPath) }}" />
                    </div><!--/.well -->
                    <div class="clearfix"></div>
                    <div class="clearfix"></div>
                         <div class="span3">Fitting Room image</div>
                    <div id="pro_img"> <img src="{{ asset(product.fittingRoomImage) }}" />
                    </div><!--/.well -->
                    <div class="clearfix"></div>
                    </div>         

                
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Name</div>
                                    <div class="span3">{{product.name }}</div>
                                    <div class="span3">Waist</div>
                                    <div class="span3">{{product.waist }}</div>

                                    
                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Sku</div>
                                    <div class="span3">{{product.sku }}</div>
                                    <div class="span3">Gender</div>
                                    <div class="span3">{{product.gender }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Brand</div>
                                    <div class="span3">{{product.brand.name }}</div>
                                    <div class="span3">Clothing Type</div>
                                    <div class="span3">{{product.clothingType.name }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Inseam</div>
                                    <div class="span3">{{product.inseam }}</div>
                                    <div class="span3">Outseam</div>
                                    <div class="span3">{{product.outseam }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Hip</div>
                                    <div class="span3">{{product.hip }}</div>
                                    <div class="span3">Hem</div>
                                    <div class="span3">{{product.hem }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Bust</div>
                                    <div class="span3">{{product.bust }}</div>
                                    <div class="span3">Back</div>
                                    <div class="span3">{{product.back }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Arm</div>
                                    <div class="span3">{{product.arm }}</div>
                                    <div class="span3">Length</div>
                                    <div class="span3">{{product.length }}</div>

                                </div>          
                                <div class="row-fluid show-grid">
                                    <div class="span3">Leg</div>
                                    <div class="span3">{{product.leg }}</div>
                                    <div class="span3">Adjustment</div>
                                    <div class="span3">{{product.adjustment }}</div>
                                    </div>
                                    
                                    
                                
                                </div> 
                                     



                                </div>      
                            </div><!-- End pro_detail -->      
                        </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form>  
  <!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Product</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Product <b>{{product.name }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_product_delete', {'id': product.Id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>              
                
                
                
                
 
            </div>      



