                              </table>  
{% for pc in product.productcolors %}  

       {% if color_id is defined and  color_id and color_id == pc.id %}

 <table width="50%">
                                
                             
        <form action="{{ path('admin_product_detail_color_create',{'id': product.Id }) }}" method="post" {{ form_enctype(colorform) }} >
                                 {{ form_errors(colorform) }}
                
                 {{form_row(colorform.title)}}          
               <div id="pro_color">
              <div class="edt_container">
                                     
                                     
              <div style="position: absolute; top:20px; right: 200px;">
                                    {{form_row(colorform.file)}}
                                   
                                 
                                        <div id="photo_upload">&nbsp;</div>                                        
                                    </div>
                  
                                      
                  
                                    <div class="row-fluid show-grid">    
                                    <div class="span3">Title</div>
                                    <div class="span3">{{ form_widget(colorform.title) }}{{ form_errors(colorform.title) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-1</div>
                                    <div class="span3">{{ form_widget(colorform.color_a) }}{{ form_errors(colorform.color_a) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-2</div>
                                    <div class="span3">{{ form_widget(colorform.color_b) }}{{ form_errors(colorform.color_b) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-3</div>
                                    <div class="span3">{{ form_widget(colorform.color_c) }}{{ form_errors(colorform.color_c) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Pattern</div>
                                    <div class="span3">{{ form_widget(colorform.pattern) }}{{ form_errors(colorform.pattern) }}</div>
                                  </div>    
                                   <div class="row-fluid show-grid">    
                                    <div class="span3">Available sizes</div>
                                    <div>{{ form_widget(colorform.sizes) }}</div>
                                  </div>      
                                     
                                  
                                     
                                     <div style="float:right;">                                   
                                    <div>
				{{ form_rest(colorform) }}
                                        
                                      <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn"/>                                     
                                    </div>                                    
                                    </div>
                                </div>   
                                  </div>                       
                       </div>
</form>
                                    
                                   
                                    
                                  
                               
                                
                                
                               
                             
                            
                              </table>   
{% endif %}
{% endfor %}
</div>