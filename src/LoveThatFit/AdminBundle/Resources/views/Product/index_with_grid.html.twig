            var brand = $('#brand').val();
            var category = []
            $("#category_select:checked").each(function () {
                category.push($(this).val());
            });

            var genders = []
            $("#genders:checked").each(function () {
                genders.push($(this).val());
            });

            var target = []
            $("#target:checked").each(function () {
                target.push($(this).val());
            });
            $('#loading-indicator').show();
            serachData = {brand: brand, category: category, genders: genders, target: target, page: page, start:0, length:-1, draw:1, order:[{column: 0, dir: "desc"}]};
            $.ajax({
                type: 'POST',
                url: $('#url').text(),
                data: serachData,
                success: function (data) {
                    issearch = 1;
                    initializeDataTable(data['data']);
                    $('#loading-indicator').hide();
                    $("#back_to_listing").show();
                }
            });
            return false;
        }

