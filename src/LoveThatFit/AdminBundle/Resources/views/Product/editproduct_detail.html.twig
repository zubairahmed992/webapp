{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
 
<li><a href="{{ path('admin_products') }}" >Products</a> <span class="divider">/</span></li>
          <li class="active">Edit</li>
          
{% endblock %}
{% block h1 %}Product{% endblock %}

{% block title %}Product{% endblock %}


{% block body %}

<div>      
    <h1 style="float:left;">Edit Product </h1>
     <div class="btn_wrapper">     
    
   <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>
      </div>
      <div class="clearfix"></div>   
    <form action="{{ path('admin_product_detail_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}

            <div id="detail_wrapper">      
                <div id="p_hd">Product Detail</div>
                      

                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid">
                                    <div class="span3">Name</div>
                                    <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>
                                </div>
                               <div class="row-fluid show-grid">    
                                    <div class="span3">Description</div>
                                    <div class="span3">{{ form_widget(form.description) }}{{ form_errors(form.description) }}</div>
                                  </div> 
                              
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Gender</div>
                                    <div class="span3">{{ form_widget(form.gender) }}{{ form_errors(form.gender) }}</div>
                                  </div>      
                                <div class="row-fluid show-grid">
                                    <div class="span3">Brand</div>
                                    <div class="span3">{{ form_widget(form.Brand) }}{{ form_errors(form.Brand) }}</div>
                                   

                                </div>  
                                <div class="row-fluid show-grid">
                                     <div class="span3">Clothing Type</div>
                                    <div class="span3">{{ form_widget(form.ClothingType) }}{{ form_errors(form.ClothingType) }}
                                    </div>
                                </div>
                                 
                               
                                <div class="row-fluid show-grid">
                                    <div class="span3">Arm</div>
                                    <div class="span3">{{ form_widget(form.arm) }}{{ form_errors(form.arm) }}</div>
                                    

                                </div>  
                                <div class="row-fluid show-grid">
                                     <div class="span3">Length</div>
                                    <div class="span3">{{ form_widget(form.length) }}{{ form_errors(form.length) }}</div>
                                </div>    
                                <div class="row-fluid show-grid">
                                    <div class="span3">Adjustment</div>
                                    <div class="span3">{{ form_widget(form.adjustment) }}{{ form_errors(form.adjustment) }}</div>
                                    </div>
                                    
                                    
                                <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">
				{{ form_rest(form) }}
                                   <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="UPDATE" class="btn btn-large btn-primary"/>                                     
                                    </div>                                    
                                    </div>
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End pro_detail -->      
                        </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form> 
      
          
            </div>     


 <!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Product</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Product <b>{{entity.name }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_product_delete', {'id': entity.id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>  
    

{% endblock %}

