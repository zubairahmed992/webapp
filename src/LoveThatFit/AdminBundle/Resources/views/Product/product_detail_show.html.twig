{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %} 
<link rel="stylesheet" href="{{ asset('bundles/lovethatfit/admin/colorpicker/css/colorpicker.css')}}" type="text/css" />
<link rel="stylesheet" media="screen" type="text/css" href="{{ asset('bundles/lovethatfit/admin/colorpicker/css/layout.css')}}" />
<script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/colorpicker/js/jquery.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/colorpicker/js/colorpicker.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/colorpicker/js/eye.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/colorpicker/js/utils.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/colorpicker/js/layout.js?ver=1.0.2')}}"></script>
<li><a href="{{ path('admin_products') }}" >Products</a> <span class="divider">/</span></li>
          <li class="active">Show</li>         
{% endblock %}
          
{% block h1 %}Products{% endblock %}

{% block title %}Products{% endblock %}


{% block body %}
<div>      
    <h1 style="float:left;">Product Details</h1>
     
   
      <div class="clearfix"></div>   
    

            <div id="detail_wrapper">      
                <div id="p_hd">Product Detail</div>
                 
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid edt_span">
                                
                                    <div class="span3"><h3>{{product.name }}</h3>
                                        <p>{{product.description}}</p>
                                    </div>
                                   
                                    
                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                   <div class="span3">Gender</div>
                                    <div class="span3">{{product.gender }}</div>

                                </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Brand</div>
                                    <div class="span3">{{product.brand.name }}</div>
                                  
                                </div>          
                                 <div class="row-fluid show-grid edt_span">    
                                  <div class="span3">Clothing Type</div>
                                  <div class="span3">{{product.clothingType.name }}</div>
                                  <div class="span3">Adjustment</div>
                                    <div  class="span3">{{product.adjustment }}</div>
                                  </div>          
                                <div class="row-fluid show-grid edt_span">
                                    <div class="span3">Arm</div>
                                    <div class="span3">{{product.arm }}</div>
                                    <div class="span3">Length</div>
                                    <div class="span3">{{product.length }}</div>

                                </div>          
                                
                                    
                              <div class="btn_wrapper">     
      <a href="{{ path('admin_products') }}" class="btn">back</a>
      <a href="{{ path('admin_product_detail_edit', {'id': product.Id}) }}" class="btn">Edit</a>      
      <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>
     </div>       
                                
                                </div> 
                                     



                                </div>      
    
     
     
                            </div><!-- End pro_detail --> 
                             <!-- Start Of Color Form -->   
     
      <form action="{{ path('admin_product_detail_color_create',{'id': product.Id }) }}" method="post" {{ form_enctype(colorform) }}>
                                 {{ form_errors(colorform) }}
                                 <div class="edt_container">
                                     Color:
                                     <div class="clearfix"></div>
                                    <div style="margin-top:20px; margin-left:5px;">
    
                                    {{ form_errors(colorform.file) }}
                                    {{ form_widget(colorform.file) }}
                                    
                                    </div>
                                    <div class="row-fluid show-grid">    
                                    <div class="span3">Title</div>
                                    <div class="span3">{{ form_widget(colorform.title) }}{{ form_errors(colorform.title) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-1</div>
                                    <div class="span3">{{ form_widget(colorform.color_a) }}{{ form_errors(colorform.color_a) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-2</div>
                                    <div class="span3">{{ form_widget(colorform.color_b) }}{{ form_errors(colorform.color_b) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Color-3</div>
                                    <div class="span3">{{ form_widget(colorform.color_c) }}{{ form_errors(colorform.color_c) }}</div>
                                  </div>
                                  <div class="row-fluid show-grid">    
                                    <div class="span3">Pattern</div>
                                    <div class="span3">{{ form_widget(colorform.pattern) }}{{ form_errors(colorform.pattern) }}</div>
                                  </div>    
                                   <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">
				{{ form_rest(colorform) }}
                                        
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/>                                     
                                    </div>                                    
                                    </div>
                                </div>   
                                  </div>
          </form>
                        <!-- End Of Color Form --> 
            <!-- Start OF Product Color Display --> 
            
                             
                            <h2> Product Color</h2>
                             <table style="width:50%">
                                 <thead
                                 <tr>
                                    <th><b>Title</th>
                                     <th><b>Color1</th>
                                     <th><b>Color2</th>
                                     <th><b>Color3</b></th>
                                    </tr>
                                  </thead>  
                              {% for pc in product.productColors %}  
                                <tr>
                                    <td style="text-align:'center';">{{pc.title}}</td>
                                    <td bgcolor="#{{pc.ColorA}}" style="text-align:'center'; width:10px;"></td>
                                    <td  bgcolor="#{{pc.colorB}}" style="text-align:'center';width:1px;"></td>
                                    <td  bgcolor="#{{pc.colorC}}"style="text-align:'center';width:1px;"></td>
                                </tr>
                               
                             
                             {%endfor%}
                              </table>   
                   <!-- End OF Product Color Display -->    
                
                   
                    <!-- Start OF Product Color Display --> 
            
                             
                            <h2> Available Sizes</h2>
                             <table style="width:50%">
                                   
                              {% for ps in product.getSizes %}  
                                <tr>
                                    <td style="text-align:'center';">
                                        <input type="checkbox" name="product_size[]" value="{{ps}}">
                                     {{ps}}</td>
                                    
                                </tr>
                               
                             
                             {%endfor%}
                              </table>   
                   <!-- End OF Product Color Display -->   
                   
                             </div>
            
            
            
            
            </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
               
  <!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Product</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Product <b>{{product.name }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_product_detail_delete', {'id': product.Id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>              
                
                
                
                
 
            </div>      



{% endblock %}
