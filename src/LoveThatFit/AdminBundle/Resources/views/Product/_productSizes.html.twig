<div id="pro_sizes_wrapper">  
    <h2> Product Sizes</h2>
{% if app.session.hasFlash('success') %}
    <div class="alert alert-success">   
    {{ app.session.flash('success') }}
        </div>

{% endif %}
    {% if app.session.hasFlash('warning') %}
        <div class="alert alert-error">   
    {{ app.session.flash('warning') }}
            </div>

{% endif %}
   {% if product.clothingType.target =='Top' %}
            <table style="width:50%">
                <div class="row-fluid show-grid p_title">

                    <div class="span1 hds"><b>Title</b></div>
                    <div class="span1 hds"><b>Bust</b></div>
                    <div class="span1 hds"><b>Back</b></div>
                    <div class="span1 hds"><b>Arm</b></div>
                    <div class="span1 hds"><b>Hem</b></div>
                    <div class="span1 hds"></div>


                </div>




{% for ps in product.productSizes %}  

       {% if size_id is defined and  size_id and size_id == ps.id %}
                <form action="{{ path('admin_product_detail_size_update',{"id":product.id, "size_id":ps.id}) }}" method="post" {{ form_enctype(sizeform) }}>
                                 {{ form_errors(sizeform) }}


                        <div class="row-fluid show-grid p_title">

                            <div class="span1 size_input">{{ ps.title }}</div>
                            <div class="span1 size_input">{{ form_widget(sizeform.bust) }}{{ form_errors(sizeform.bust) }}</div>
                            <div class="span1 size_input">{{ form_widget(sizeform.back) }}{{ form_errors(sizeform.back) }}</div>
                            <div class="span1 size_input">{{ form_widget(sizeform.arm) }}{{ form_errors(sizeform.arm) }}</div>
                            <div class="span1 size_input">{{ form_widget(sizeform.hem) }}{{ form_errors(sizeform.hem) }}</div>
                            <div class="span1">
                                <input type="submit" value="SAVE" class="btn"/>
                                <a href="{{ path('admin_product_detail_show',{'id':product.Id}) }}" class="btn">Cancel</a>
                            </div>  

                        </div>                        

                        {{ form_rest(sizeform) }}
                    </form>  
{% else %}

                    <div class="row-fluid show-grid p_title">
                        <div class="span1">{{ps.title}}</div>
                        <div class="span1">{{ps.bust}}</div>
                        <div class="span1">{{ps.back}}</div>
                        <div class="span1">{{ps.arm}}</div>
                        <div class="span1">{{ps.hem}}</div>
                        <div class="span1">
                            <a href='{{path("admin_product_detail_size_edit",{"id":product.id, "size_id":ps.id})}}' class="btn">Edit</a>
                            <a href="#myModal1" role="button" data-toggle="modal" class="btn">Delete</a>


                        </div>              
                        <div id="myModal1" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h3 id="myModalLabel">Delete Product</h3>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to Delete this Product <b>{{product.name }} Size</b>?</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                <a href="{{path("admin_product_detail_size_delete",{"id":product.id, "size_id":ps.id})}}"  class="btn btn-primary">Delete</a>

                            </div>
                        </div>  
                    </div>
         {% endif %}
                         </table> 

{%endfor%}
                 
