{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
    <li class="active">Users</li>
{% endblock %}

{% block body %}
    <style>
        .custom_search {
            position: relative;
            bottom: -40px;
        }

        .custom_search label, .custom_search select {
            width: 80%;
            padding-left: 10px;
            position: relative;
            z-index: 1;
        }

        .custom_search label {
            display: inline-block;
        }

        .dataTables_wrapper .dataTables_length {
            float: right !important;
            margin-left: 12px;
        }

        @media only screen and (max-width: 767px) {
            .custom_search {
                bottom: 0px;
            }
        }
    </style>
    <div class="p_listing">
        <div class="clearfix"></div>
        <h1 style="float:left;">Users Activity</h1>
        <div class="clearfix"></div>
        <div class="btn_wrapper2">
            <div id="select_pannel" class="row">
                <div class="span1"></div>
                <div class="span4">
                    <b>User: </b>&nbsp;
                    <select id="sel_user">
                        <option>select</option>
                        {% for k,v in users %}
                            <option value="{{ v.id }}">{{ v.email }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="span2">
                    <button type="submit" class="btn btn-default" id='btn_view_logs'> View Activity Log</button>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="bs-docs-grid">
        <div class="container">
            <div class="row">
                <table id="logs" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        {#<th>#</th>#}
                        <th>App</th>
                        <th>Login At</th>
                        <th>Logout At</th>
                        {#<th>Actions</th>#}
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Warning</h3>
        </div>
        <div class="modal-body">
            <p>Please Select a User.</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            {#<a href="{{ path('admin_user_delete',{'id':user.Id}) }} " class="btn btn-primary">Delete</a>#}
        </div>
    </div>

    <script type="text/javascript">
        function showUserLogs(user_id) {
            /*var notShownIDs = [2725, 2735, 2731, 2680, 2703, 2444, 2729];*/
            var tableGroup = $('#logs').DataTable({
                "processing": true,
                "serverSide": false,
                "destroy": true,
                "ajax": {
                    "url": "../admin/user_activity/" + user_id + "/show",
                    "type": "POST",
                    "data": {},
                },
                "sAjaxDataProp": "data",
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "pagingType": "full_numbers",
                "order": [[0, "asc"]],
                "columns": [
                    {
                        "data": "app",
                        "width": "20%",
                    },
                    {
                        "data": "login_at",
                        "width": "20%",
                    },
                    {
                        "data": "logout_at",
                        "width": "20%",
                    }/*,
                     {
                     "title": "Actions",
                     "targets": -1,
                     "data": null,
                     "orderable": false,
                     "searchable": false,
                     "defaultContent": DeleteGroupButton,
                     "width": "25%"
                     },*/
                ],
                /*"createdRow": function (row, data, index) {
                 if (jQuery.inArray(data["id"], notShownIDs) != -1) {
                 $('td', row).addClass('hide_grid_row');
                 }
                 },*/
            });
            $.fn.dataTable.ext.errMode = 'none';
        }

        jQuery(document).ready(function () {
            showUserLogs($('option:selected', $('#sel_user')).val());
            $("#btn_view_logs").click(function () {
                tt = $('option:selected', $('#sel_user')).html();
                if (tt != 'select') {
                    showUserLogs($('option:selected', $('#sel_user')).val());
                } else {
                    $("#myModal").modal();
                }
            });
        });
    </script>
{% endblock %}