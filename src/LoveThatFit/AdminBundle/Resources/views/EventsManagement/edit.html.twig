{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
  <li><a href="{{ path('admin_events') }}" >Events Management</a></li>
{% endblock %}
{% block h1 %}Events Management{% endblock %}
  {% block title %}Events Management{% endblock %}
{% block body %}
<div>
  <h1 style="float:left;">Update Events</h1>
  <div class="btn_wrapper">
    <a href="{{ path('admin_events') }}" class="btn">back to list</a>
  </div>
  <div class="clearfix"></div>
  <form  action="{{ path('admin_events_update', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    <div id="detail_wrapper">
      <div id="product_content">
        <div id="pro_detail">
          <div class="edt_container">
            <div class="row-fluid show-grid">
              <div class="span3">Event Name</div>
              <div class="span3">{{ form_widget(form.event_name) }}{{ form_errors(form.event_name) }}</div>
            </div>
            <div class="row-fluid show-grid">
              <div class="span3">Event Status</div>
              {{ form_rest(form) }}
            </div>
            <div class="row-fluid show-grid">
              <div class="span3">&nbsp;</div>
              <div class="span3">
                <div style="margin:0px 0px 0px 0px;">
                  <input type="submit" value="Update" class="btn btn-primary"/>
                </div>                                    
              </div>
            </div>
          </div>
        </div>      
      </div><!-- End product_content --> 
    </div> <!-- End detail_wrapper -->
</form> 
{% endblock %}