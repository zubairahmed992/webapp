{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}

    <li><a href="{{ path('admin_events') }}" >Event Management</a><span class="divider">/</span></li>
    <li class="active">Add</li>
{% endblock %}
{% block h1 %}Support User{% endblock %}
{% block title %}Support User{% endblock %}
{% block body %}
    <div>
        <div class='clearfix'></div>     
        <h1 style="float:left;">Add Event</h1>
        <div class="btn_wrapper">     
            <a href="{{ path('admin_events') }}" class="btn">back to list</a>
        </div>
        <div class="clearfix"></div>   
        <form action="{{ path('admin_events_create')}}" method="post" {{ form_enctype(form) }} onsubmit="return validates();">
            {{ form_errors(form) }}
            <div id="detail_wrapper">      
                <div id="product_content">
                    <div id="pro_detail">
                        <div class="edt_container">
                            <div class="row-fluid show-grid">
                              <div class="span3">Event Name</div>
                              <div class="span3">{{ form_widget(form.event_name) }}{{ form_errors(form.event_name) }}</div>
                            </div>
                            <div class="row-fluid show-grid">
                              <div class="span3">Event Disabled</div>
                              <div class="span3">{{ form_rest(form) }}</div>
                            </div>
                        <div class="row-fluid show-grid">
                            <div class="span3">&nbsp;</div>                                    
                            <div class="span3">
                              <div style="margin:0px 0px 0px 0px;">
                                <input type="submit" value="Add" class="btn btn-primary"/>
                              </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End product_content --> 
</div> <!-- End detail_wrapper -->
</form> 
<!-- Modal -->
{% endblock %}
