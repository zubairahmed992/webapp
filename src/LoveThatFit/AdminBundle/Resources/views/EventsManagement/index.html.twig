{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
   <li class="active">Events Management</li>
{% endblock %}

{% block body %}
<div class="p_listing">
    <div class="clearfix"></div>
      <h1 style="float:left;">Events Management</h1>
      <div class="clearfix"></div>
      <div class="btn_wrapper2">
        <a href="{{ path('admin_events_new') }}" class="btn">Add New</a>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <div class="bs-docs-grid">
      <table id="example" class="display" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Event ID</th>
              <th>Event Name</th>
              <th>Created At</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
      </table>  
    </div>
  </div> 
</div>
<script type="text/javascript">
  jQuery(document).ready(function() {

    var table = $('#example').DataTable({
       "processing": true, 
        "serverSide": true, 
        "ajax": {
            "url": "{{ path('admin_events_paginate') }}",
            "type": "POST"
        },
        "sAjaxDataProp": "data", 
        "pageLength": 10,
        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
        "order": [[ 0, "desc" ]],
        "columns": [
          {
              "data"  : "id",
              "searchable" : false,
          },
          {
              "data"  : "event_name",
          },
          {
              "data"  : "created_at",
          },
          {
              "data"  : "disabled",
              "orderable": false,
              "searchable" : false,
          },
          {
              "title"         : "Actions",
              "targets"       : -1,
              "data"          : null,
              "orderable"     : false,
              "searchable"    : false,
              "defaultContent": EditButton +" "+ DeleteButton,
          },
        ]
    });

    jQuery('#example tbody').on( 'click', 'button, a, img', function () {
      var dataAction = $(this).attr('data-action');
      var data = table.row( $(this).parents('tr') ).data();
      if (dataAction == 'Edit') {
          var url = '{{ path('admin_events_edit', {'id': ":id"}) }}';
          url     = url.replace(':id', data.id);
          window.top.location = url;
      }
      if (dataAction == 'Delete') {
          var url = '{{ path('admin_events_delete', {'id': ":id"}) }}';
          url     = url.replace(':id', data.id);
          window.top.location = url;
      }
    });
  });

</script>
{% endblock %}