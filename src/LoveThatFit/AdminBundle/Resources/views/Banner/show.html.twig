{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_banners') }}" >Banner</a> <span class="divider">/</span></li>
<li class="active">Show</li>
{% endblock %}


{% block h1 %}Banner{% endblock %}

{% block title %}Banner{% endblock %}


{% block body %}

<div>
    <h1 style="float:left;">Banner Details</h1>
     <div class="btn_wrapper">
         <a href="{{ path('admin_banners',{'page_number':page_number}) }}" class="btn">back</a>
         <a href="{{ path('admin_banner_edit', {'id': banner.id}) }}" class="btn">Edit</a>

        <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>

      </div>
      <div class="clearfix"></div>
            <div id="detail_wrapper">
                <div id="p_hd">Banner Detail</div>
                    {% set type = { 1: 'Fullsize Banner',
                                    2: 'Image with Title',
                                    3: 'Text, Description with Price',
                                    4: 'Shop the look',
                                    5: 'Shop the look fitting room',
                                    6: 'Product Detail',
                                    7: 'Brand Detail',
                                    8: 'Category with specific filters',
                                    }
                    %}
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">
                                <div class="row-fluid show-grid edt_span">
                                    <div>
                                    {% if banner.banner_type != ''  %}
                                        <div class="span8">
                                            <div class="span3">Banner Type</div>
                                            <div class="span3">{{type[banner.banner_type] }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.name != ''  %}
                                        <div class="span8">
                                            <div class="span3">Name</div>
                                            <div class="span3">{{banner.name }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.image_position != ''  %}
                                        <div class="span8">
                                            <div class="span3">Image Position</div>
                                            <div class="span3">{{banner.image_position }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.cat_id != ''  %}
                                        <div class="span8">
                                            <div class="span3">Targeted Category</div>
                                            <div class="span3">{{banner.cat_name }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.description != ''  %}
                                        <div class="span8">
                                            <div class="span3">Description</div>
                                            <div class="span3">{{banner.description }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.sorting != ''  %}
                                        <div class="span8">
                                            <div class="span3">Sorting</div>
                                            <div class="span3">{{banner.sorting }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.price_min != ''  %}
                                        <div class="span8">
                                            <div class="span3">Minimum Price</div>
                                            <div class="span3">{{banner.price_min }}</div>
                                        </div>
                                    {% endif %}
                                    {% if banner.price_max != ''  %}
                                        <div class="span8">
                                            <div class="span3">Maximum Price</div>
                                            <div class="span3">{{banner.price_max }}</div>
                                        </div>
                                    {% endif %}
                                    </div>
                                    <div>
                                    {% if banner.image != ''  %}
                                        <div>
                                            <div><img src="/uploads/ltf/banner/web/{{ banner.image }}" style="height: auto !important;width: auto !important;"/></div>
                                        </div>
                                    {% endif %}
                                    </div>
                                    </div>
                                </div>
                                </div>
                            </div><!-- End pro_detail -->
                        </div><!-- End product_content -->
                    </div> <!-- End detail_wrapper -->
                </form>
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Banner</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Banner <b>{{banner.name }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_banner_delete', {'id': banner.id}) }}"  class="btn btn-primary">Delete</a>

  </div>
</div>
            </div>

{% endblock %}

