<table class="table table-condensed table-bordered  table-hover" >
    <tr style="background-color: #F2F2F2;font-size:12px;">
        <th>Id</th>
        <th>Email</th>
        <th>Size</th>
        <th>Fit Index</th>
    </tr>
    {% for id, p in products %} 
    <tr>
        <td style="padding: 2px; padding-right: 20px">{{id}}</td>
        <td>{{p.name}}</td>
        <td>{{p.size}}</td>
        <td>{{p.fit_index}}</td>
        
    </tr>
    {% endfor %}
</table>