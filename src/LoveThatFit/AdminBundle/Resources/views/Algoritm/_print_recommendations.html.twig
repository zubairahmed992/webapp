<html>
<body>
{#<table class="table table-condensed table-bordered  table-hover" >#}

<h4> Product list with recomended sizes & fit index</h4>

    <table border="1" cellpadding="2" cellspacing="2">
        <tr>
            <td width="2%"></td>
            <td width="6%">Name:</td>
            <td colspan="2" align="center">Email:</td>
            <td width="13%">&nbsp;</td>
            <td width="8%">&nbsp;</td>
            <td width="11%" align="center">Bust:</td>
            <td width="10%" align="right">Waist:</td>
            <td width="10%" align="right">Hip:</td>
            <td colspan="2" align="center">Thigh:</td>
            <td width="5%" align="left">Inseam:</td>
        </tr>
        <tr>
            <td></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Item</strong></td>
            <td width="10%" align="center" bgcolor="#CCCCCC"><strong>Fit Index <br />
                    (0-10 App)</strong></td>
            <td width="2%" align="center" bgcolor="#CCCCCC"><strong>Size</strong></td>
            <td width="9%" align="left" bgcolor="#CCCCCC"><strong>Member<br />
                    Fit (Y/N)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Member Fit<br />
                    Rating (0-10)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Tech Fit<br />
                    (Y/N)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Tech Fit<br />
                    Rating (0-10)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Req Larger<br />
                    (Y/N)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Req Smaller<br />
                    (Y/N)</strong></td>
            <td width="7%" align="center" bgcolor="#CCCCCC"><strong>Member<br />
                    App (Y/N)</strong></td>
            <td width="7%" align="center" bgcolor="#CCCCCC"><strong>Tech App<br />
                    (Y/N)</strong></td>
            <td align="center" bgcolor="#CCCCCC"><strong>Notes</strong></td>
        </tr>
        {% for id, p in products %}
            {% if loop.index % 2 == 0 %}
               {% set class_val = 'even' %}
            {% else %}
                {% set class_val = 'odd' %}
                {% endif %}
        <tr class="{{ class_val }}">
            <td></td>
            <td><strong>{{p.clothing_type}}</strong></td>
            <td>{{p.fit_index}}</td>
            <td>{{p.size}}</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
            <tr class="{{ class_val }}">
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
        {% endfor %}
</body>
</html>