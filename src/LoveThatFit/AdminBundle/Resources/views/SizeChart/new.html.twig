{% block breadcrumb %}
<li><a href="{{ path('admin_size_charts') }}" >Size Chart</a> <span class="divider">/</span></li>
<li class="active">New</li>
 <script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/js/jquery-1.9.1.js') }}"></script>
<script type="text/javascript">
    {% autoescape false %}
    var allSizeTitle={{allMixSizeTitles}};
    {% endautoescape %}
    function strLower(str){
        return str.toLowerCase()
    }
   $(document).ready(function() {
       // By default woman size chart ////
       
      // womanSizeTitle();
    
  var gender=strLower($('#sizechart_gender').val());   
  var target=strLower($('#sizechart_target').val());
  
  if(gender=='f'){
  womanSizeTitle();
  }
  else if(gender=='m' && target=="top" ){
      manTopSizeTitle();
  }
  else if(gender=='m' && target=="bottom" ){
     manBottomSizeTitle();
  
 }
       
 $('#sizechart_target').change(function() {
 var gender=strLower($('#sizechart_gender').val()); 
  var target=strLower($('#sizechart_target').val());
 changeTitle(gender,target);
 
});    

$('#sizechart_gender').change(function() {
	  var gender=strLower($('#sizechart_gender').val()); 
          var target=strLower($('#sizechart_target').val());
          var selectVals = $('#sizechart_gender').val();
            changeTitle(gender,target);              
            var selectValtargets = strLower($('#sizechart_target').val()); 
            if(selectValtargets=="" && gender=='m'){
            $('#sizechart_title').empty();
            $('<option>').val('').text("Please Select Target Above").appendTo('#sizechart_title');  
            }
                    
            if(selectVals=='f')
                {
                  $("#bodyType").show();
                  $("#neck").show();
                  $("#shoulder_across_back").show();
                  $("#bust").show();
                  $("#waist").show();                  
                  $("#hip").show();
                  $("#sleeve").hide();
                  $("#inseam").hide();                  
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();   
                }else
                    {
                         $("#bodyType").hide();
                    }                
            if(selectVals=='m')
            {
                  $("#bodyType").hide();
                  $("#sizechart_target option[value='Dress']").remove(); 
                  $("#bust").hide();
                  
            }else
                    {
                        $("#sizechart_target").append('<option value="Dress">Dress</option>');
                    }
                
        
        if((selectValtargets=='top' && selectVals=='f') )
                {
                  $("#neck").show();
                  $("#shoulder_across_back").show();
                  $("#bust").show();
                  $("#waist").show();                  
                  $("#hip").show();
                  $("#sleeve").hide();
                  $("#inseam").hide();                  
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();                  
                }
            if((selectValtargets=='bottom' &&  selectVals=='f'))
                {
                  $("#waist").show();
                  $("#hip").show();
                  $("#thigh").show();
                  $("#outseam").show();
                  $("#inseam").show();                  
                  $("#neck").hide();
                  $("#shoulder_across_back").hide();
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#chest").hide();                  
                }                
              if((selectValtargets=='dress' && selectVals=='f'))
                {
                  $("#neck").show();  
                  $("#shoulder_across_back").show();
                  $("#bust").show();
                  $("#sleeve").show();  
                  $("#waist").show();
                  $("#hip").show();
                  $("#thigh").hide();
                  $("#outseam").hide();
                  $("#inseam").hide();                  
                  $("#chest").hide();                                  
                }  
              if((selectValtargets=='top' && selectVals=='m'))
                {
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#shoulder_across_back").show();
                  $("#waist").show();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#inseam").hide();
                  $("#outseam").hide();
                  $("#thigh").hide();                  
                }
            if((selectValtargets=='bottom' && selectVals=='m'))
                {
                  $("#waist").show();
                  $("#inseam").show();
                  $("#outseam").show();
                  $("#hip").show();    
                  $("#thigh").show();
                  $("#shoulder_across_back").hide();                                
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();                  
                  $("#chest").hide();                                    
                }                
              if((selectValtargets=='dress' &&  selectVals=='m'))
                {
                 $("#waist").hide();
                  $("#inseam").hide();
                  $("#outseam").hide();
                  $("#hip").hide();    
                  $("#thigh").hide();
                  $("#shoulder_across_back").hide();                                
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();                  
                  $("#chest").hide();      
                }    
	});      
        
        });
 
 function changeTitle(gender,target){  
        if(gender=="f"){
  womanSizeTitle();
  }
   else if(gender=="m" && target=="top" ){
      manTopSizeTitle();
  }
  else if(gender=="m" && target=="bottom" ){
      manBottomSizeTitle();
 }
 else{
    $('#sizechart_title').empty();
    
    $('<option>').val('').text("Not Found").appendTo('#sizechart_title');  
 }
 }
 
  // For Woman Size Chart 
  
 function womanSizeTitle(){
 $('#sizechart_title').empty();
 {% autoescape false %}
 var women=allSizeTitle;
 $('#sizechart_title').empty();
 $('<option>').val('').text("Select Size Title").appendTo('#sizechart_title');    
 $.each(women['woman'], function(k, v) {
 $('<option>').val(k).text(k).appendTo('#sizechart_title');    
 });
 {% endautoescape %}
 }
// For Man top Size Title
function  manTopSizeTitle(){
    $('#sizechart_title').empty();
 {% autoescape false %}
 var manTop=allSizeTitle;
 $('<option>').val('').text("Select Size Title").appendTo('#sizechart_title');    
 $.each(manTop['man_top'], function(k, v) {
 $('<option>').val(k).text(k).appendTo('#sizechart_title');    
 });
 {% endautoescape %}
}
// Man Bottom 
function  manBottomSizeTitle(){
    $('#sizechart_title').empty();
 {% autoescape false %}
 var manBottom=allSizeTitle;
 $('<option>').val('').text("Select Size Title").appendTo('#sizechart_title');    
 $.each(manBottom['man_bottom'], function(k, v) {
 $('<option>').val(k).text(k).appendTo('#sizechart_title');    
 });
 {% endautoescape %}
}
</script>



{% endblock %}



