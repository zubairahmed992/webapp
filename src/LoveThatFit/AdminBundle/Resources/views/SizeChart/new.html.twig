<li class="active">New</li>
 <script type="text/javascript" src="{{ asset('bundles/lovethatfit/admin/js/jquery-1.9.1.js') }}"></script>
<script type="text/javascript">
   $(document).ready(function() {
   $('#sizechart_gender').change(function() {	   
	    var selectVal = $('#sizechart_gender').val();
            var selectValtarget = $('#sizechart_target').val(); 
	    if(selectVal=='F')
                {                 
                  $("#genderfemale").show();
                  $("#waist").show();
                  $("#bust").show();                  
                  $("#sleeve").show();
                  $("#hip").show();                  
                  $("#inseam").show();
                  $("#back").show();
                  $("#thigh").show();
                  $("#chest").hide();
                  $("#outseam").hide();                  
                  $("#neck").hide();                  
                  $("#sizechart_target option[value='Dress']").remove();
                  $("#sizechart_target").append('<option value="Dress">Dress</option>');
                }
                if(selectVal=='M')
                { 
                  $("#waist").show();
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#inseam").show();
                  $("#back").show();      
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#outseam").hide();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }
	});        
        $('#sizechart_target').change(function() {
	 
            var selectVal = $('#sizechart_gender').val();
            var selectValtarget = $('#sizechart_target').val();              
            if(selectValtarget=='Top' && selectVal=='F')
                {
                  $("#waist").show();
                  $("#bust").show();
                  $("#sleeve").show();
                  $("#back").show();
                  $("#hip").show();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                }
            if(selectValtarget=='Bottom'&& selectVal=='F')
                {
                  $("#waist").show();
                  $("#hip").show();
                  $("#inseam").show();
                  $("#back").show();
                  $("#thigh").show();
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  
                }                
              if(selectValtarget=='Dress'&& selectVal=='F')
                {
                  $("#waist").show();
                  $("#bust").show();
                  $("#hip").show();
                  $("#back").show();
                  $("#sleeve").hide();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                }  
              if(selectValtarget=='Top' && selectVal=='M')
                {
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#back").show();
                  $("#waist").hide();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#inseam").hide();
                  $("#outseam").hide();
                  $("#thigh").hide();
                }
            if(selectValtarget=='Bottom'&& selectVal=='M')
                {
                  $("#waist").show();
                  $("#inseam").show();
                  $("#back").show();
                  $("#hip").hide();                  
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }                
              if(selectValtarget=='Dress'&& selectVal=='M')
                {
                  $("#waist").hide();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#sleeve").hide();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#back").hide();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }    
	});
        });
</script>



{% endblock %}



