{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
       <li class="active">Size Chart</li>
{% endblock %}

{% block body %}
<div class="p_listing">     
    <h1 style="float:left;">Size Chart</h1>
<div class="btn_wrapper">     
     <a href="{{ path('admin_size_chart_new') }}" class="btn">Add New</a>
      </div>
     <div class="clearfix"></div>
    <div class="bs-docs-grid">              

    
       <div class="row-fluid show-grid">
            <div class="span3 hds">ID</div>
            <div class="span3 hds">Title</div>            
            <div class="span3 hds">Gender</div>
            <div class="span3 hds"></div>          
        </div>  

          {% for sc in sizechart %}

        <div class="row-fluid show-grid">
            <div class="span3 show">{{sc.Id}}</div>
            <div class="span3 show">{{sc.title}}</div>            
            <div class="span3 show">{{sc.gender}}</div>
            <div class="span3 show">                  
                <div>
                    <a href="{{ path('admin_size_chart_show', {'id':sc.Id}) }}"><i class="icon-eye-open"></i></a>
                    <a href="{{ path('admin_size_chart_edit', {'id': sc.Id}) }}"><i class="icon-edit"></i></a>
                    <a href="#myModal{{sc.Id}}" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
                </div> 
            </div>              
        </div>

        <!-- Modal -->
<div id="myModal{{sc.Id}}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Size Chart</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Brand <b>{{sc.title}}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_size_chart_delete', {'id': sc.Id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>
{% endfor %}



    </div>


</div>

   

{% endblock %}
