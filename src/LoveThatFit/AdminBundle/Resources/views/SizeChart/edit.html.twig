<script type="text/javascript">
   $(document).ready(function() {
   $('#sizechart_gender').change(function() {	   
	    var selectVal = $('#sizechart_gender').val();
            var selectValtarget = $('#sizechart_target').val(); 
	    if(selectVal=='f')
                {                 
                  $("#genderfemale").show();
