                  $("#thigh").show();
                  $("#sizechart_target option[value='Dress']").remove();
                  $("#sizechart_target").append('<option value="Dress">Dress</option>');
                }
                if(selectVal=='m')
                { 
                  $("#waist").show();
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#inseam").show();
                  $("#back").show();      
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#outseam").hide(); 
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }
	});        
        $('#sizechart_target').change(function() {
	 
            var selectVal = $('#sizechart_gender').val();
            var selectValtarget = $('#sizechart_target').val();              
            if(selectValtarget=='Top' && selectVal=='f')
                {
                  $("#waist").show();
                  $("#bust").show();
                  $("#sleeve").show();
                  $("#back").show();
                  $("#hip").hide();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                }
            if(selectValtarget=='Bottom'&& selectVal=='f')
                {
                  $("#waist").show();
                  $("#hip").show();
                  $("#inseam").show();
                  $("#back").show();
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").show();
                }                
              if(selectValtarget=='Dress'&& selectVal=='f')
                {
                  $("#waist").show();
                  $("#bust").show();
                  $("#hip").show();
                  $("#back").show();
                  $("#sleeve").hide();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                }  
              if(selectValtarget=='Top' && selectVal=='m')
                {
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#back").show();
                  $("#waist").hide();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#inseam").hide();
                  $("#outseam").hide();
                  $("#thigh").hide();
                }
            if(selectValtarget=='Bottom'&& selectVal=='m')
                {
                  $("#waist").show();
                  $("#inseam").show();
                  $("#back").show();
                  $("#hip").hide();                  
                  $("#bust").hide();
                  $("#sleeve").hide();                  
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }                
              if(selectValtarget=='Dress'&& selectVal=='m')
                {
                  $("#waist").hide();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#sleeve").hide();
                  $("#inseam").hide();
                  $("#neck").hide();
                  $("#outseam").hide();
                  $("#chest").hide();
                  $("#back").show();
                  $("#thigh").hide();
                  $("#sizechart_target option[value='Dress']").remove();
                }    
	});
        });
</script>
