                {
                  $("#neck").show();
                  $("#sleeve").show();
                  $("#chest").show();
                  $("#back").show();
                  $("#waist").show();
                  $("#bust").hide();
                  $("#hip").hide();
                  $("#inseam").hide();
                  $("#outseam").hide();
                  $("#thigh").hide();                  
                }
            if((selectValtargets=='Bottom')&& (selectVals=='M' || selectVals=='m'))
                {
                  $("#waist").show();
                  $("#inseam").show();
                  $("#outseam").show();
                  $("#hip").show();    
                  $("#thigh").show();
                  $("#back").hide();                                
                  $("#bust").hide();
