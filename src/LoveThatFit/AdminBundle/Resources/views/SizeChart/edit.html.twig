  // Size Title from yml --Suresh----#     
 function changeTitle(gender,target){
  if(gender=="f"){
  womanSizeTitle();
  }
   else if(gender=="m" && target=="top" ){
      manTopSizeTitle();
  }
  else if(gender=="m" && target=="bottom" ){
      manBottomSizeTitle();
 }
 else{
     $('#sizechart_title').empty();
    $('<option>').val('').text("Not Found").appendTo('#sizechart_title');  
 }
 }
 
  // For Woman Size Chart 
  
        
  
 function womanSizeTitle(){
 $('#sizechart_title').empty();
 {% autoescape false %}
 var women=allSizeTitle;
 $('#sizechart_title').empty();
 $('<option>').val('').text("Select Size Title").appendTo('#sizechart_title');    
 $.each(women['woman'], function(k, v) {
     
 $('<option>').val(k).text(k).appendTo('#sizechart_title');    
 });
 
 
 {% for womansize in womanSizeTitle %}
  {% if(womansize==entity.title) %}
  $("option[value='{{womansize}}']").attr('selected','selected');
  {%endif%}
 {% endfor %}
     
 {% endautoescape %}
   
 }
