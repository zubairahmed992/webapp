            if((selectValtargets=='Bottom') && (selectVals=='F'  || selectVals=='f'))
                {
                  $("#waist").show();
                  $("#hip").show();
                  $("#thigh").show();
                  $("#outseam").show();
                  $("#inseam").show();                  
                  $("#neck").hide();
                  $("#back").hide();
