{% extends 'LoveThatFitAdminBundle::base.html.twig' %}

{% block breadcrumb %}
<li><a href="{{ path('admin_categories') }}" >Categories</a> <span class="divider">/</span></li>
<li class="active">Show</li>
{% endblock %}


{% block h1 %}Categories{% endblock %}

{% block title %}Category{% endblock %}


{% block body %}

<div>      
    <h1 style="float:left;">Category Details</h1>
     <div class="btn_wrapper">     
         <a href="{{ path('admin_categories',{'page_number':page_number}) }}" class="btn">back</a>
         <a href="{{ path('admin_category_edit', {'id': categories.Id}) }}" class="btn">Edit</a>
     
        <a href="#myModal" role="button" data-toggle="modal" class="btn">Delete</a>
      
      </div>
      <div class="clearfix"></div>   
    

            <div id="detail_wrapper">      
                <div id="p_hd">Category Detail</div>
                    <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid edt_span">
                                    <div>
                                    {% if categories.name != ''  %}
                                        <div class="span8">
                                            <div class="span3">Name</div>
                                            <div class="span3">{{categories.name }}</div>
                                        </div>
                                    {% endif %}

                                    {% if categories.gender != ''  %}
                                         <div class="span8">
                                            <div class="span3">Gender</div>
                                            <div class="span3">{{categories.gender }}</div>
                                        </div>
                                    {% endif %}

                                    </div>
                                    <div>
                                    {% if categories.image != ''  %}
                                        <div>
                                            <div><img src="{{ asset(categories.WebPath) }}" style="height: auto !important;width: auto !important;"/></div>
                                        </div>
                                    {% endif %}
                                    </div>
                                </div>
                                </div>
                                </div>      
                            </div><!-- End pro_detail -->      
                        </div><!-- End product_content --> 
                    </div> <!-- End detail_wrapper -->
                </form>  
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Category</h3>
  </div>
  <div class="modal-body">
      <p>Are you sure you want to Delete this Category <b>{{categories.name }}</b>?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <a href="{{ path('admin_category_delete', {'id': categories.Id}) }}"  class="btn btn-primary">Delete</a>
    
  </div>
</div>                     
            </div>      

{% endblock %}

