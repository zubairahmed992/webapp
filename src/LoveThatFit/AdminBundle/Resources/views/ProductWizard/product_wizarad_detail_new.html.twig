{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
<script>
   function submitForm() {
    $.ajax(
            {
        type:'POST',
        url: $('#admin_product_wizard_detail_create').text(),
        data:$('#productwizard').serialize(),        
        success: function(response) {
        $('#tab2').show();
    }});
    return false;
}            
    </script>
{% endblock %}
{% block h1 %}Product{% endblock %}
{% block title %}Product{% endblock %}
{% block body %}
<div>      
    <h1 style="float:left;"> Product Detail </h1>    
    <div class="clearfix"></div>   
    <div id="rootwizard">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul>
                        <li><a href="#tab1" data-toggle="tab">Step1</a></li>
                        <li><a href="#tab2" data-toggle="tab">Step2</a></li>
                        <li><a href="#tab3" data-toggle="tab">Step3</a></li>
                        <li><a href="#tab4" data-toggle="tab">Step4</a></li>						
                    </ul>
                </div>
            </div>
        </div>
        <div id="bar" class="progress progress-striped active">
            <div class="bar"></div>
        </div>
        <div class="tab-content">
            <div class="tab-pane" id="tab1">                
               <span id="admin_product_wizard_detail_create" style="display:none;">{{path('admin_product_wizard_detail_create')}}</span>
<form id="productwizard" onsubmit="return submitForm();">
 {{ form_errors(form) }}
                
                        <div id="detail_wrapper">      
                            <div id="p_hd">Product Detail</div>                
                            <div class="clearfix"></div>
                            <div id="product_content">
                                <div id="pro_detail">
                                    <div class="edt_container">         
                                        <div class="row-fluid show-grid">
                                            <div class="span3">Name</div>
                                            <div class="span3">{{ form_widget(form.name) }}{{ form_errors(form.name) }}</div>
                                        </div>
                                        <div class="row-fluid show-grid">    
                                            <div class="span3">Description</div>
                                            <div class="span3">{{ form_widget(form.description) }}{{ form_errors(form.description) }}</div>
                                        </div> 

                                        <div class="row-fluid show-grid">    
                                            <div class="span3">Gender</div>
                                            <div class="span3">{{ form_widget(form.gender) }}{{ form_errors(form.gender) }}</div>
                                        </div>      
                                        <div class="row-fluid show-grid">
                                            <div class="span3">Brand</div>
                                            <div class="span3">{{ form_widget(form.Brand) }}{{ form_errors(form.Brand) }}</div>
                                        </div>  
                                        <div class="row-fluid show-grid">
                                            <div class="span3">Clothing Type</div>
                                            <div class="span3">{{ form_widget(form.ClothingType) }}{{ form_errors(form.ClothingType) }}
                                            </div>
                                        </div>

                                        <div class="row-fluid show-grid">
                                            <div class="span3">Adjustment</div>
                                            <div class="span3">{{ form_widget(form.adjustment) }}{{ form_errors(form.adjustment) }}</div>
                                        </div>
                                        <div class="row-fluid show-grid">
                                            <div class="span3">Disabled</div>
                                            <div class="span3">{{ form_widget(form.disabled) }}{{ form_errors(form.disabled) }}</div>
                                        </div> 

                                        <div class="row-fluid show-grid">
                                            <div class="span3">&nbsp;</div>
                                            <div class="span3">&nbsp;</div>
                                            <div class="span3">&nbsp;</div>
                                            <div class="span3">
				{{ form_rest(form) }}
                                                    <div style="margin:0px 0px 0px 0px;">                                     
                                                        <button class="btn btn-primary" type="submit">Save</button>
                                                    </div>                                    
                                                </div>
                                            </div>
                                        </div> 
                                    </div>      
                                </div><!-- End pro_detail -->      
                            </div>
                        </form>             
                    </div>
                    <div class="tab-pane" id="tab2">                          
                        {%if product is defined%}
                            {{ include('LoveThatFitAdminBundle:ProductWizard:_product_entry_detail.html.twig',{'product':product})}}
                        {%endif%}
                        </div>
                    <div class="tab-pane" id="tab3">
                        
                        {% include 'LoveThatFitAdminBundle:ProductWizard:_productSizes.html.twig'%}
                    </div>
                    <div class="tab-pane" id="tab4">
                        Product item
                        {% include 'LoveThatFitAdminBundle:ProductWizard:_productItems.html.twig' %}
                    </div>                    
                </div>	
            <ul class="pager wizard">
                        <li class="previous"><a href="javascript:;">Previous</a></li>
                        <li class="next"><a href="javascript:void(0);">Next</a></li>
                    </ul>
            </div> 
        </div>   
{% endblock %}

