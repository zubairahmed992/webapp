{% extends 'LoveThatFitAdminBundle::base.html.twig' %}
{% block breadcrumb %}
   <li class="active">YMl Data</li>
{% endblock %}

{% block header_right_links %}


{% endblock %}

{% block body %}
    <div>
        <h1 style="float:left;">Misc Settings</h1>

        <div class="clearfix"></div>
            <div id="detail_wrapper" class="detail_wrap">
                <div id="p_hd">Fitting Room Background</div>


                <div id="product_content">
                    <div id="pro_detail">
                        <div class="edt_container">
                            <form action="{{ path('admin_misc_setting_update') }}" method="post" enctype="multipart/form-data"  >
                                <div class="row-fluid show-grid">
                                    <div class="span2"><strong>Fitting Room Background</strong></div>
                                </div>
                                {% if (image) %}
                                    <div class="row-fluid">
                                        <div id="pro_img"><img src="{{  image }}" width="300px"/>
                                        </div>
                                    </div>
                                {% endif %}
                            <div class="row-fluid show-grid">
                                <div class="span2" style="max-height: 100px !important;">
                                    <input type="file" id="background_file" name="background_file" required="required" accept=".png">
                                    <br />
                                    <input type="submit" value="Upload" class="btn btn-small btn-primary"/>
                                    {% if (image) %}
                                        <a href="#myModal" role="button" data-toggle="modal" class="btn btn-small btn-primary">Delete</a>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row-fluid show-grid">
                                <div class="span2">

                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div><!-- End pro_detail -->
            </div><!-- End product_content -->
    </div>

<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Delete Fitting room Background Image</h3>
    </div>
    <div class="modal-body">
        <p>Are you sure you want to Delete this Background Image?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <a href="{{ path('admin_misc_setting_remove') }}"  class="btn btn-primary">Delete</a>
    </div>
</div>



{% endblock %}
