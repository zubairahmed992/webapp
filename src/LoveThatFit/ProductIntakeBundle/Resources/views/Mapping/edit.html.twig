{% extends 'LoveThatFitProductIntakeBundle::base.html.twig' %}

{% block body %}
<style>
.grid_headers{
text-align:center;
font-size:12px;
background-color: #737373;
color: #FFF;
height: 30px;
}
.fit_point_title_link{
 color:#5B5B5B; 
 padding-right: 5px;
 border-bottom: solid 1px #E5E2E2;
 display: block;
 height: 24px;
}
