                                    <div style="margin:0px 0px 0px 0px;"><input type="hidden" name="order_amount" value="{{ order_amount }}"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/>
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div>
                </div><!-- End pro_detail -->
            </div><!-- End product_content -->

        </form>
    </div>


{% endblock %}