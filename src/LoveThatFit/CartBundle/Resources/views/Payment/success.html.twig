{% extends 'LoveThatFitCartBundle::basecart.html.twig' %}

{% block profile_heading %}


{% endblock %}
{% block profile_section %}
    {% if app.session.hasFlash('warning') %}
        <div class="alert alert-error">
            {{ app.session.flash('warning') }}
        </div>
    {% endif %}
    {% if app.session.hasFlash('success') %}
        <div class="success_alert">
            {{ app.session.flash('success') }}
        </div>
    {% endif %}



            {% if(transaction_status == 'authorized') %}

                <div class="confirmation_box">

                    <h1>Order Confirmation</h1>

                    Your Order has been placed successfully, your order number is <br><span>{{ order_number }}</span></div>


            {% else %}

                <div class="confirmation_box">
                    <h1>Order Confirmation</h1>
                    There is some error occured while payment, Your Transaction has been Declined</div>


            {% endif %}








{% endblock %}