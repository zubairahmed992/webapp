<body class="full">
<div class="container-fluid">
<div class="row row-centered"> 
<div style="margin-top:3%;">
  <div class="col-xs-10 col-sm-6 col-md-4 col-centered login-box">
  
  <div class="logo-margin">
   <div class="col-centered"><img src="{{asset('bundles/lovethatfit/site/images/logo_inner.png')}}" class="img-responsive" alt="Selfie Styler"></div> 
  </div>
      <br></br>    
      <div class="form-group"><input class="form-control" id="txt_email" type="text" value="Email"></div><br>
      <div class="form-group"><input class="form-control" id="txt_password" type="text" value="password"></div><br>
      <div class="form-group"><input class="form-control" id="txt_gender" type="text" value="gender"></div><br>
      <div class="form-group"><input class="form-control" id="txt_zip_code" type="text" value="zip_code"></div><br>
      <div class="form-group"><input class="form-control" id="txt_height" type="text" value="height"></div><br>
      <div class="form-group"><input class="form-control" id="txt_weight" type="text" value="weight"></div><br>
      <div class="form-group"><input class="form-control" id="txt_fit_type" type="text" value="fit_type"></div><br>
      
