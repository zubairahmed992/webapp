    </div>
</div> 
 </div>
  
  
</div>



 

<script>
    
  $("#btn_continue").click(function() {  
          hit_service();
        });
        
function hit_service(){    
        
        var visitor = {        
            email: $("#txt_email").val(),
            password : $("#txt_password").val(),
            gender : $("#txt_gender").val(),
            zip_code : $("#txt_zip_code").val(),
            height : $("#txt_height").val(),
            weight : $("#txt_weight").val(),
            fit_type : $("#txt_fit_type").val(),
            body_shape : $("#txt_body_shape").val(),
            bra_size : $("#txt_bra_size").val(),
            bust : $("#txt_bust").val(),
            waist : $("#txt_waist").val(),
            hip : $("#txt_hip").val()
        };
            
                          
        
        $.ajax({
               type: "POST",
               url: "../visitor/update",
               data: visitor,  
               dataType: "json",
               success: function(data){
                   alert(data);                    
                },
               failure: function(errMsg) {
                   alert(errMsg);
               }
         });    
}
</script>


