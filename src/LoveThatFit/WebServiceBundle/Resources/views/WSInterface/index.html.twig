 function display_response(data){
            stopTimer();
            if($('#chk_new_window').is(':checked')){
                var win=window.open('about:blank');
                    with(win.document)
                    {
                      open();
                      str = JSON.stringify(data, null, 2);
                      str = str.split("\\").join("");
                      write(str);
                      close();
                    }
            }else{
