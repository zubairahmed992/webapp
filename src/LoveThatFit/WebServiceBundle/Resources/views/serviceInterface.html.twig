 <script>
 function getServiceName(){
var service_name=$('#service').val();
    if(service_name=="_login"){
      $('#_login').show();
     }else if(service_name=="_register"){
          $('#_register').show();
     }else{
           $('#_login').hide();
           $('#_register').hide();
    }
    
}
function getService(){
   var param=$('#param').val();
   if(param=='_login'){
       email=$('#email').val();
       password=$('#password').val();
       deviceType=$('#deviceType').val();
       $.ajax({
         type:'POST',
         url: 'login',
         data: {email: email, password: password ,deviceType:deviceType, 'type':'type'},  
         success: function(response) {
        $('#json_data').html(response);

     }});
    return false;
   }
}
     </script>       
